DEPTH		= ..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= dbm
LIBRARY_NAME	= mozdbm_s
LIB_IS_C_ONLY	= 1

ifeq ($(OS_ARCH),WINNT)
LIBRARY_NAME	= dbm$(MOZ_BITS)
endif

SIMPLE_PROGRAMS	= tests/lots$(BIN_SUFFIX)

LIB_CSRCS	= \
		src/db.c \
		src/h_bigkey.c \
		src/h_func.c \
		src/h_log2.c \
		src/h_page.c \
		src/hash.c \
		src/hash_buf.c \
		src/hsearch.c \
		src/mktemp.c \
		src/ndbm.c \
		src/strerror.c \
		src/nsres.c \
		$(NULL)

ifeq ($(OS_ARCH),WINNT)
LIB_CSRCS	+= src/memmove.c src/snprintf.c
else
ifeq (,$(filter -DHAVE_MEMMOVE=1,$(DEFS)))
LIB_CSRCS	+= src/memmove.c
endif

ifeq (,$(filter -DHAVE_SNPRINTF=1,$(DEFS)))
LIB_CSRCS	+= src/snprintf.c
endif
endif # WINNT

EXPORTS		= \
		include/nsres.h \
		include/cdefs.h \
		include/mcom_db.h \
		include/ncompat.h \
		include/winfile.h \
		$(NULL)

LOCAL_INCLUDES	= -I$(srcdir)/include

FORCE_STATIC_LIB = 1
FORCE_USE_PIC = 1

PWD		:= $(shell pwd)
MAKE_DIRS	= $(PWD)/src $(PWD)/include $(PWD)/tests

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DMEMMOVE -D__DBINTERFACE_PRIVATE $(SECURITY_FLAG)
ifeq ($(OS_ARCH), Linux)
DEFINES         += -D_BSD_SOURCE
endif

ifeq ($(OS_ARCH),AIX)
OS_LIBS		+= -lc_r
endif

ifeq (,$(filter WINNT OS2,$(OS_ARCH)))
PROG_LIBS	= -L.
endif
PROG_LIBS	+=  $(call EXPAND_LIBNAME,$(LIBRARY_NAME))
