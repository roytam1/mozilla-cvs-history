#include "nsIOutlinerRange.idl"

[scriptable, uuid(6A7D0719-645A-4c8e-9807-16FD00F87322)]
interface nsIOutlinerRangeList : nsISupports
{
  // The number of ranges in the list.
  readonly attribute long count;

  // Obtains the range at a given index.
  nsIOutlinerRange getRangeAt(in long index);
  
  // Adds a new range to the list.
  void appendRange(in nsIOutlinerRange range);
  
  // Inserts a range.into the list.
  void insertRangeAt(in long index, in nsIOutlinerRange range);
  
  // Remove a range from the list.
  void removeRange(in nsIOutlinerRange range);

  // Remove the range at a specific index.
  nsIOutlinerRange removeRangeAt(in long index);
};

