DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= layout
LIBRARY_NAME	= gkhtmlforms_s
REQUIRES	= xpcom locale widget view dom js htmlparser necko webshell rdf caps editor intl uconv exthandler mime timer txmgr

CPPSRCS		= \
		nsButtonFrameRenderer.cpp \
		nsComboboxControlFrame.cpp \
		nsFieldSetFrame.cpp \
		nsFileControlFrame.cpp \
		nsFormControlFrame.cpp \
		nsFormControlHelper.cpp \
		nsFormFrame.cpp \
		nsGfxButtonControlFrame.cpp \
		nsGfxCheckboxControlFrame.cpp \
		nsGfxRadioControlFrame.cpp \
		nsHTMLButtonControlFrame.cpp \
		nsImageControlFrame.cpp \
		nsLabelFrame.cpp \
		nsLegendFrame.cpp \
		nsListControlFrame.cpp \
		nsRadioControlGroup.cpp \
		nsIsIndexFrame.cpp \
		$(NULL)

ifdef MOZ_ENDER_LITE
CPPSRCS	+= nsGfxTextControlFrame2.cpp
else
CPPSRCS	+= nsGfxTextControlFrame.cpp
endif

# we don't want the shared lib, but we want to force the creation of a static lib.
override NO_SHARED_LIB=1
override NO_STATIC_LIB=

CHROME_DIR	= locales/en-US
CHROME_L10N_DIR	= communicator/locale/layout
CHROME_L10N	= ./HtmlForm.properties
CHROME_L10N = ./ImageDocument.properties

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_HTML

ifdef MOZ_ENDER_LITE
DEFINES		+= -DENDER_LITE
endif

INCLUDES	+= \
		-I$(srcdir)/../../../base/src \
		-I$(srcdir)/../../base/src \
		-I$(srcdir)/../../style/src \
		-I$(srcdir)/../../../xul/base/src \
		$(NULL)

