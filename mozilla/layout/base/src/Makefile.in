		nsGenericElement.cpp \
		nsLayoutAtoms.cpp \
		nsLayoutDebugger.cpp \
		nsNameSpaceManager.cpp \
		nsPluginViewer.cpp \
		nsPresContext.cpp \
		nsPrintContext.cpp \
		nsPrintPreviewContext.cpp \
		nsRange.cpp \
		nsRangeList.cpp \
		nsSpaceManager.cpp \
		nsStyleChangeList.cpp \
		nsStyleCoord.cpp \
		nsStyleContext.cpp \
		nsStyleSet.cpp \
		nsTextContentChangeData.cpp \
		nsTextFragment.cpp \
		nsTextNode.cpp \
		nsXIFConverter.cpp \
