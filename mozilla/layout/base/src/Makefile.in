include $(DEPTH)/config/autoconf.mk

MODULE		= layout
LIBRARY_NAME	= raptorlayout_s

CPPSRCS		= \
		nsCaret.cpp \
		nsCommentNode.cpp \
		nsContentIterator.cpp \
		nsContentList.cpp \
		nsDocument.cpp \
		nsDocumentEncoder.cpp \
		nsDocumentFragment.cpp \
		nsDocumentViewer.cpp \
		nsDOMAttribute.cpp \
		nsDOMAttributeMap.cpp \
