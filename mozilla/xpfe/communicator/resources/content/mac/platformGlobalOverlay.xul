<?xml version="1.0"?> 
<!-- mac version of platformGlobalOverlay.xul -->

<!DOCTYPE window SYSTEM "chrome://global-platform/locale/platformGlobalOverlay.dtd">


<overlay id="platformGlobalOverlay"
		 xmlns:html="http://www.w3.org/1999/xhtml"
		 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<!-- close -->
	<menuitem id="menu_close" value="&closeCmd.label;" key="key_close" observes="cmd_close"/>
	<key id="key_close"  key="&closeCmd.key;" observes="cmd_close" modifiers="accel"/>
	
	<!-- quit -->
	<menupopup id="menu_FilePopup">
		<menuitem value="&quitApplicationCmd.label;" key="key_quit" observes="cmd_quit"/>
	</menupopup>
	<key id="key_quit"  key="&quitApplicationCmd.key;" observes="cmd_quit" modifiers="accel"/>
 	<broadcaster id="cmd_quit" oncommand="goQuitApplication()"/>
	
	<!-- Edit Menu -->
	<menuitem id="menu_redo" value="&redoCmd.label;" key="key_redo" observes="cmd_redo"/>
	<key id="key_redo"   key="&redoCmd.key;" observes="cmd_redo" modifiers="shift, accel"/>
	
	<!-- Delete Key -->
	<key id="key_delete" keycode="VK_BACK"     observes="cmd_delete"/>

</overlay>		
