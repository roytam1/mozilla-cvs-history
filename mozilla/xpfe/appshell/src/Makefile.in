DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

IS_COMPONENT=1
MODULE		= appshell
LIBRARY_NAME	= nsappshell
EXPORT_LIBRARY = 1
SHORT_LIBNAME	= appshell
REQUIRES	= xpcom string widget docshell webshell layout dom necko uriloader js locale webbrwsr rdf pref xpconnect timer chardet intl chrome profile prefmigr xul gfx2 windowwatcher browser mozcomps

EXTRA_DSO_LIBS	= jsdom

CPPSRCS		= \
		nsChromeTreeOwner.cpp \
		nsContentTreeOwner.cpp \
		nsXULWindow.cpp \
		nsAppShellService.cpp \
		nsWebShellWindow.cpp \
		nsCommandLineService.cpp \
		nsXPConnectFactory.cpp \
		nsJSXPConnectFactory.cpp \
		nsAppShellNameSet.cpp \
		nsFileLocations.cpp \
		nsWindowMediator.cpp \
		nsAbout.cpp \
		nsAppShellFactory.cpp \
		nsTimingService.cpp \
		$(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),os2)
CPPSRCS	+= nsUserInfoOS2.cpp
else
CPPSRCS	+= nsUserInfoUnix.cpp
endif

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_NECKO_UTIL_LIBS) \
		$(FULLCIRCLE_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

