DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DIRS		= public src samples resources

include $(topsrcdir)/config/rules.mk

ifeq (mac,$(MOZ_WIDGET_TOOLKIT))
CHROME_PLATFORM = mac
else
ifeq ($(OS_ARCH),OS2)
CHROME_PLATFORM = win
else
CHROME_PLATFORM = unix
endif
endif

install::
	@$(REGCHROME) content navigator comm.jar
	@$(REGCHROME) content navigator-region comm.jar
	@$(REGCHROME) content navigator-platform comm.jar
	@$(REGCHROME) locale en-US/navigator en-US.jar
	@$(REGCHROME) locale US/navigator-region US.jar
	@$(REGCHROME) locale en-US/navigator-platform en-$(CHROME_PLATFORM).jar
