#include "nsISupports.idl"
#include "domstubs.idl"

[scriptable, uuid(8AF0FA40-598D-11d3-806A-00600811A9C3)]
interface nsIBrowserInstance : nsISupports {

    // History.
    void back();
    void forward();
    void reload(in PRUint32 reloadType);
    void stop();
    void loadUrl(in wstring url);
    void loadInitialPage();
    void backButtonPopup();
    void forwardButtonPopup();
    void gotoHistoryIndex(in PRInt32 index);
    
    // Wallet (should reside elsewhere, somehow).
    void walletPreview(in nsIDOMWindow win, in nsIDOMWindow form);
    void cookieViewer(in nsIDOMWindow win);
    void signonViewer(in nsIDOMWindow win);
    void walletEditor(in nsIDOMWindow win);
    void walletChangePassword();
    void walletQuickFillin(in nsIDOMWindow win);
    void walletRequestToCapture(in nsIDOMWindow win);
    void walletSamples();
    
    // Infrastructure.
    void init();
    void setToolbarWindow( in nsIDOMWindow aWindow );
    void setContentWindow( in nsIDOMWindow aWindow );
    void setWebShellWindow( in nsIDOMWindow aWindow );
    void SetDocumentCharset(in wstring charset);
    
    // File.
    void newWindow();
    void openWindow();
    void printPreview();

    // Edit.
    void copy();
    void selectAll();
    void print();
    void close();
    void exit();

    // View.
    attribute boolean isViewSource;
    
    // Search.
    void find();
    void findNext();
};

%{C++
#define NS_IBROWSERINSTANCE_PROGID "component://netscape/appshell/component/browser/instance"
%}
