DEPTH           = ../../..
topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@

include $(DEPTH)/config/autoconf.mk

IS_COMPONENT    = 1


DIRS = tools resources

MODULE          = tbmb
LIBRARY_NAME    = tbmb

XPIDLSRCS       = nsITimeBomb.idl

CPPSRCS         = \
                nsTimeBomb.cpp \
                $(NULL)

EXPORTS = \
                nsTimeBomb.h \
                $(NULL)

EXTRA_DSO_LDOPTS += \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

# Hack to remove old objects stuck in the srcdir
export::
	$(RM) -f $(addprefix $(srcdir)/, $(CPPSRCS:.cpp=.$(OBJ_SUFFIX)))

