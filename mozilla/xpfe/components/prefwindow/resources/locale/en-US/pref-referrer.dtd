<!ENTITY alwaysSendPrePath.label          "Always send a faked referrer">
<!ENTITY alwaysSendPrePath.accesskey      "A">
<!ENTITY alwaysSendPrePath.tooltip        "The fake referrer contains only the queried server's base URL">

