DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

CHROME_DIR	= global
CHROME_CONTENT_DIR = content
CHROME_L10N_DIR = locale
CHROME_SKIN_DIR = skin

CHROME_CONTENT	= \
		unknownContent.xul \
		unknownContent.js \
		$(NULL)

EXPORT_RESOURCE_LOCALE	= \
		locale/en-US/unknownContent.dtd	\
		locale/en-US/unknownContent.properties	\
		$(NULL)

EXPORT_RESOURCE_LOCALE := $(addprefix $(srcdir)/, $(EXPORT_RESOURCE_LOCALE))

include $(topsrcdir)/config/rules.mk

install::
	$(INSTALL) $(EXPORT_RESOURCE_LOCALE) $(DIST)/bin/chrome/global/locale

