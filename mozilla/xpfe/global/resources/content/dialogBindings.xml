<?xml version="1.0"?>

<bindings id="dialogBindings"
   xmlns="http://www.mozilla.org/xbl"
   xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="smallheader">
    <content>
      <xul:hbox class="toolbar-primary" align="center" flex="1">
        <xul:text class="box-smallheader-left" inherits="value=title"/>
        <xul:spring flex="1"/>
        <xul:text class="box-smallheader-right" inherits="value=description"/>
      </xul:hbox>
    </content>
    <implementation>
      <property name="title" onset="this.setAttribute('title',val); return val;"
                             onget="return this.getAttribute('title');"/>
      <property name="description" onset="this.setAttribute('description',val); return val;"
                             onget="return this.getAttribute('description');"/>
    </implementation>
  </binding>

  <binding id="largeheader">
    <content>
      <xul:hbox class="box-header-header toolbar-primary" flex="1" align="center">
        <xul:image inherits="src" class="box-header-circle"/>
        <xul:hbox align="center" class="box-header-text-box">
          <xul:text class="box-header-text" inherits="value"/>
        </xul:hbox>
        <xul:spring flex="1"/>
      </xul:hbox>
    </content>
  </binding>
  
  <binding id="status">
    <content>
      <xul:hbox class="box-status-bg toolbar-standard" flex="1" align="center">
        <xul:text class="box-status-text" inherits="label"/>
        <xul:spring flex="1"/>
        <xul:text class="box-status-progress" inherits="value=progress"/>
      </xul:hbox>  
    </content>
  </binding>
  
</bindings>
