/**
 * Checker
 */
function Checker() {
}
Checker.prototype = {
  _request  : null,
  _callback : null,
  observer  : null,
  
  get _updateURL() {
    try {
      return gPref.getComplexValue(PREF_APP_UPDATE_URL, nsIPrefLocalizedString).data;
    }
    catch (e) {
    }
    return null;
  },
  
  findUpdates: function(callback) {
    if (!callback)
      throw Components.results.NS_ERROR_NULL_POINTER;
      
    this._request = Components.classes["@mozilla.org/xmlextras/xmlhttprequest;1"]
                              .createInstance(Components.interfaces.nsIXMLHttpRequest);
    this._request.open("GET", this._updateURL, true);
    this._request.overrideMimeType("text/xml");
    this._request.onerror = this.onError;
    this._request.onload = this.onLoad;
    this._request.onprogress = this.onProgress;
    LOG("Checker.findUpdates: sending request to " + this._updateURL);
    this._request.send(null);
    
    this._callback = callback;
  },
  
  onProgress: function(event) {
    if (this.observer)
      this.observer.onProgress(event.target, event.position, event.totalSize);
  },
  
  get _updates() {
    var updates = this._request.responseXML.documentElement;
    if (!updates)
      return [];
    
    var updates = [];  
    for (var i = 0; i < updates.childNodes.length; ++i)
      updates.push(new Update(updates.childNodes[i]));
    
    filterUpdates(updates);
    
    return updates;
  },
  
  onLoad: function(event) {
    // Notify the front end that we're complete
    if (this.observer)
      this.observer.onLoad(event.target);

    // Analyze the resulting DOM and determine the set of updates to install
    
    // Tell the Update Service about what we discovered.
    this._callback(this._updates);
  },
  
  onError: function(event) {
    LOG("Checker.onError: error during load");
    if (this.observer)
      this.observer.onError(event.target);
  }
};

