[% INCLUDE global/html_header.tmpl %]
[% INCLUDE global/litmus_header.tmpl %]

<script type="text/javascript">
var current_user_id=[% user.user_id %];
var formName='select_testgroup_and_mode_form';
var products=[% IF products_js %][% products_js %][% ELSE %]{}[% END %];
var branches=[% IF branches_js %][% branches_js %][% ELSE %]{}[% END %];
var subgroups=[% IF subgroups_js %][% subgroups_js %][% ELSE %]{}[% END %];
</script>

<div id="page">

[% INCLUDE sidebar/sidebar.tmpl %]

  <div id="content">

    <h1 class="firstHeading">[% title %]</h1>

    <div class="section-full">
      <div class="section-header">Existing Testgroups</div>

      <div class="section-content">

        <form id="select_testgroup_and_mode_form" name="select_testgroup_and_mode_form" method="post" action="manage_testgroups.cgi">

	<div class="info">
          <b>Filter:</b>
          <table border="0">
	    <tr>
	      <td>Product:<br/>
                [% INCLUDE form_widgets/select_product_id.tmpl name="product_filter" placeholder=1 size=1 display_id=1 onchange="changeProduct('_filter');updatePersistVars();filterList();" %]
	      </td>
	      <td>Branch:<br/>
                [% INCLUDE form_widgets/select_branch_id.tmpl name="branch_filter" placeholder=1 size=1 display_id=1 onchange="updatePersistVars();filterList();" %]
	      </td>
	    </tr>
	  </table>
        </div>
        <hr/>
	<table border="0" cellspacing="0" cellpadding="5">
	<tr>
        <td>
	[% INCLUDE form_widgets/select_testgroup_id.tmpl name="testgroup_id" placeholder=1 size=10 display_id=1 onchange="loadTestgroup();" %]
        </td>
        </tr>
        <tr>        
        <td>
	<input id="add_testgroup_button" name="add_testgroup_button" class="manage" type="button" onClick="switchToAdd();" value="Add testgroup">&nbsp;
	<input id="edit_testgroup_button" name="edit_testgroup_button" class="manage" type="button" onClick="switchToEdit();" value="Edit testgroup" disabled>&nbsp;
	<input id="clone_testgroup_button" name="clone_testgroup_button" class="manage" type="submit" value="Clone testgroup" disabled>&nbsp;
	<input id="delete_testgroup_button" name="delete_testgroup_button" class="manage" type="submit" onClick="confirm('Really delete this testgroup?');" value="Delete testgroup" disabled>
        </td>
        </tr>
	</table>
	</form>

      </div> <!--end section-content-->
    </div> <!--end section-full-->

    <div style="display: none;" id="testgroup_display_div" class="section-full">
      <div id="testgroup-title" class="section-header">Testgroup Info</div>
      <div class="section-content">

        <div class="testgroup-content">
          [% INCLUDE testgroup/testgroup.tmpl testgroup=testgroup %]
        </div>
      </div>
    </div>

    <div style="display: none;" id="editform_div" class="section-full">
      <div id="testgroup-title" class="section-header">Testgroup Info</div>

      <div class="section-content">

      [% INCLUDE admin/edit_testgroup.tmpl %]

      </div> <!--end section-content-->
    </div> <!--end section-full-->

  </div> <!--END content-->

</div> <!--END page-->

<script language="JavaScript" type="text/Javascript" src="js/Litmus.js"></script>
<script language="JavaScript" type="text/Javascript" src="js/ManageTestgroups.js"></script>
<script type="text/javascript">
var em = document.getElementById('testgroup_id'); 
if (em.selectedIndex >= 0) {
  loadTestgroup(1);
  enableForm('edit_testgroup_form');
} else {
  disableForm('edit_testgroup_form');
}
var suffix='';
[% IF product_persist %]
  setSelected(document.getElementById('product_filter'),[% product_persist | uri %]);
  changeProduct('_filter');
  [% IF branch_persist %]
    setSelected(document.getElementById('branch_filter'),[% branch_persist | uri %]);
  [% END %]
  filterList();
[% END %]
</script>

[% INCLUDE global/litmus_footer.tmpl %]
[% INCLUDE global/html_footer.tmpl %]



