<table width="100%">
  <tr class="bz_row_header">
    <th>Attachment</th>
	<th>Submitter</th>
	<th>Type</th>
	<th>Created</th>
	<th>Size</th>
	<th>Actions</th>
  </tr>
[% FOREACH a = item.attachments %]
  <tr>
    <td><a href="tr_attachment.cgi?attach_id=[% a.id %]&action=view">[% a.description FILTER html %]</a></td>
	<td>[% a.submitter.login FILTER html %]</td>
	<td>[% a.mime_type FILTER html %]</td>
	<td>[% a.creation_ts FILTER time %]</td>
	<td>[% a.datasize FILTER unitconvert %]</td>
	<td><a href="tr_attachment.cgi?attach_id=[% a.id %]&action=edit">Edit</a> 
	     [% IF Param("allow-test-deletion") %]<a href="tr_attachment.cgi?attach_id=[% a.id %]&action=delete">Delete</a>[% END %]</td>
  </tr>
[% END %]
<!--form name="attachment" method="POST" action="tr_show_[% type FILTER none %].cgi" enctype="multipart/form-data" -->
<input type="hidden" name="[% type FILTER none %]_id" value="[% item.id FILTER none %]">
<!--input type="hidden" name="action" value="attachment" -->
<table border="0" width="100%" style="border: 1px solid #000;">
  <tr>
    <th align="right">File</td>
    <td><input name="data" type="file"></td>
    <th align="right">Description:</td>
    <td><input name="description"></td>
    <td align="right">
    <div id="message"></div>
    <input type="submit" name="action" value="Attach"></td>
  </tr>    
</table>
