<form method="POST" action="tr_admin_environment.cgi" name="form1" onSubmit="updateCategory();return false;">
<h3>Category Administration</h3>
  <table border="0">
    <tr> 
    <th class="bz_row_header" align="right">Parent Product:</th>
     <td>
      <select name="product" id="product">
              <option value="[% currentproduct.id %]">[% currentproduct.name %]
          [% FOREACH p = products %]
              [% IF currentproduct.id != p.id %]
                  <option value="[% p.id %]">[% p.name %]
              [% END %]
        [% END %]
      </select>
     </td>
    </tr>
    <th class="bz_row_header" align="right">Category Name:</th>
     <td><input name="name" id="name" value="[% category.name%]" size="30" /></td>
    </tr>
  </table>
  
  <br />
  
  <input name="submit" type="submit" value="Submit">
</form>
