sub pretty_print {
# nicely format %env output
	
    my ($str)=@_;
    
    # protect single quotes with a backslash
#    $str = s!\'!\\\'!  

    $str =~ s!:!\'.\n\t\':!g;
    $str =~ s!,!\'.\n\t\',!g;
    $str =~ s!;!\'.\n\t\';!g;
    $str =~ s! !\'.\n\t\' !g;
    
    return $str;
}


sub main {
    foreach $env (sort keys %ENV) {	
	print "\$ENV{'$env'}='".
	    &pretty_print($ENV{$env}).
	    "';\n";
    }
    exit 0;   
}

&main();
