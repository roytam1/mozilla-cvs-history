# $Name$


sub pretty_print {
# nicely format %env output
	
    my ($str)=@_;
    
    # protect quotes and dollars with a backslash
    $str =~ s!\"!\\\"!;  
    $str =~ s!\$!\\\$!;  

    # break lines at the different separators in the string
    $separator = "\";\n\tx=\"\$x";

    $str =~ s!;!$separator;!g;
    $str =~ s!:!$separator:!g;
    $str =~ s!,!$separator,!g;
    $str =~ s! !$separator !g;

    $str = "\tx=\"$str\";\n";
    
    return $str;
}


# ------- main ---------

{

  foreach $env (sort keys %ENV) {	
    print &pretty_print($ENV{$env});
    print "\n$env=\$x; export $env;\n\n";
  }

  exit 0;   
}
