DEPTH=..\..\..\..


MODULE=rdf

IDLSRCS =  \
        XULDocument.idl         \
        XULBrowserElement.idl          \
        XULIFrameElement.idl          \
        XULElement.idl          \
        XULCommandDispatcher.idl   \
        XULTreeElement.idl      \
        XULEditorElement.idl      \
		XULPopupElement.idl \
		XULTitledButtonElement.idl \
		XULCheckboxElement.idl \
		XULRadioElement.idl \
		XULRadioGroupElement.idl \
		XULMenuListElement.idl \
       $(NULL)

XPCOM_DESTDIR=$(DEPTH)\rdf\content\public
JSSTUB_DESTDIR=$(DEPTH)\rdf\content\src

GENXDIR=genx
GENJSDIR=genjs

!include <$(DEPTH)\config\rules.mak>

$(GENXDIR):
	-mkdir $(GENXDIR)

$(GENJSDIR):
	-mkdir $(GENJSDIR)

IDLC=$(DIST)\bin\idlc.exe
GENIID=$(DIST)\bin\geniid.pl

export:: $(GENXDIR) $(GENJSDIR) $(IDLSRCS)
	@echo +++ make: generating xpcom headers
	$(IDLC) -d $(GENXDIR) -x $(IDLSRCS)
	@echo +++ make: generating JavaScript stubs
	$(IDLC) -d $(GENJSDIR) -j $(IDLSRCS)

install::
	$(MAKE_INSTALL:/=\) $(GENXDIR)\nsIDOM*.h $(XPCOM_DESTDIR)
	$(MAKE_INSTALL:/=\) $(GENJSDIR)\nsJS*.cpp $(JSSTUB_DESTDIR)
