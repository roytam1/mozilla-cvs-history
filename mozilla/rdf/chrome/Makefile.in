DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@

include $(DEPTH)/config/autoconf.mk
VPATH		= @srcdir@$(VPS)@srcdir@/public

MODULE		= chrome
LIBRARY_NAME	= chrome
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
MODULE_NAME	= nsChromeModule

REQUIRES	= xpcom \
		  string \
		  rdf \
		  xuldoc \
		  gfx \
		  layout \
		  content \
		  necko \
		  dom \
		  intl \
		  widget \
		  js \
		  appshell \
		  caps \
		  pref \
		  docshell \
		  imglib2 \
		  xpconnect \
		  jar \
		  $(NULL)

CPPSRCS		= \
		src/nsChromeRegistry.cpp \
		src/nsChromeUIDataSource.cpp \
		src/nsChromeProtocolHandler.cpp \
		build/nsChromeFactory.cpp \
		$(NULL)

XPIDLSRCS	= \
		nsIChromeRegistry.idl \
		$(NULL)

LOCAL_INCLUDES	= -I$(srcdir)/src

EXTRA_DSO_LDOPTS = \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

SIMPLE_PROGRAMS	= tools/chromereg/regchrome$(BIN_SUFFIX)

PROG_LIBS	= \
		$(LIBS_DIR) \
		$(XPCOM_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

