DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

ifdef MOZ_ENABLE_XLIB
DIRS		= xlib
endif

ifdef MOZ_ENABLE_GTK_MOZILLA
all:: export install

export depend::

install::
	@$(CONTINUE_ON_ERROR) \
	$(MAKE) -C gtk install; \
	$(EXIT_ON_ERROR)

clean clobber clobber_all realclean::
	@$(CONTINUE_ON_ERROR) \
	$(MAKE) -C gtk clean; \
	$(EXIT_ON_ERROR)

distclean::
	@$(CONTINUE_ON_ERROR) \
	$(MAKE) -C gtk distclean; \
	$(EXIT_ON_ERROR)
endif

include $(topsrcdir)/config/rules.mk

