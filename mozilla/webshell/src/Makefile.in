DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= raptor
LIBRARY_NAME	= raptorwebwidget
SHORT_LIBNAME	= webshell
EXTRA_DSO_LIBS	= jsdom docshell

ifeq ($(OS_ARCH),Rhapsody)
IS_COMPONENT	= 1
endif

CPPSRCS		= \
		dlldeps.cpp \
		nsDLLFactory.cpp \
		nsWebShell.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MOZ_TIMER_LIBS) \
		-L$(DIST)/bin \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)
ifdef MOZ_PERF
EXTRA_DSO_LDOPTS += \
		$(MKSHLIB_FORCE_ALL) \
		$(DIST)/lib/libmozutil_s.$(LIB_SUFFIX) \
		$(MKSHLIB_UNFORCE_ALL) \
		$(NULL)
endif

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_WEB
INCLUDES	+= \
		-I$(topsrcdir)/docshell/base \
		$(NULL)
