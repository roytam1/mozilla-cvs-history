DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

ifeq (WINNT,$(OS_ARCH))
DIRS = windows win_gre win_mfcembed
INSTALLER_DIR = windows
else
ifeq (OS2,$(OS_ARCH))
DIRS = os2
INSTALLER_DIR = os2
else
ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
# are we ever going to have a mac installer?
# DIRS = mac
# INSTALLER_DIR = mac
else
DIRS = unix
INSTALLER_DIR = unix
endif
endif
endif

include $(topsrcdir)/config/rules.mk

installer:
ifdef INSTALLER_DIR
	make -C $(INSTALLER_DIR) installer
endif
