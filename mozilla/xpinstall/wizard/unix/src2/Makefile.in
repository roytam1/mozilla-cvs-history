DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

PROGRAM		= mozilla-installer-bin

CPPSRCS		= \
        nsXInstallerDlg.cpp \
        nsComponent.cpp \
        nsSetupType.cpp \
        nsComponentList.cpp \
        nsLicenseDlg.cpp \
        nsWelcomeDlg.cpp \
        nsSetupTypeDlg.cpp \
        nsComponentsDlg.cpp \
        nsInstallDlg.cpp \
        nsXIOptions.cpp \
        nsXIContext.cpp \
        nsXInstaller.cpp \
        nsXIEngine.cpp \
        nsINIParser.cpp \
        $(NULL)

LIBS        = \
        `gtk-config --libs` \
        -lpthread \
        $(NULL)

LOCAL_INCLUDES += -I$(srcdir)/../../../stub

ifeq ($(OS_ARCH), Linux)
DEFINES	+= -D_BSD_SOURCE
endif

include $(topsrcdir)/config/rules.mk

CXXFLAGS += `gtk-config --cflags`
