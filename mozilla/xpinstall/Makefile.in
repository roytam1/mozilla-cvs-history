DEPTH		= ..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= xpinstall
DIRS		= public res src stub cleanup

ifdef MOZ_INSTALLER
DIRS		+= wizard/libxpnet
ifdef MOZ_ENABLE_GTK
DIRS		+= wizard/unix/src2
endif
ifeq ($(OS_ARCH),WINNT)
DIRS		+= wizard/windows
endif
ifeq ($(OS_ARCH),OS2)
DIRS		+= wizard/os2
endif
endif

include $(topsrcdir)/config/rules.mk

packages:
	$(MAKE) -C packager

installer: packages
ifeq ($(OS_ARCH),Linux)
	$(MAKE) -C packager/unix
endif
ifeq ($(OS_ARCH),WINNT)
	$(MAKE) -C wizard/windows/builder
endif


