include $(DEPTH)/config/autoconf.mk
include $(topsrcdir)/config/config.mk

PROGRAM = widget

# Hardcoding dlopen()'s?  This needs to get fixed.
#
TOOLKIT_CFLAGS := \
	-DWIDGET_DLL=\"libwidget$(MOZ_TOOLKIT).$(DLL_SUFFIX)\" \
	-DGFXWIN_DLL=\"libgfx$(MOZ_TOOLKIT).$(DLL_SUFFIX)\" \
	$(TK_CFLAGS)

CPPSRCS = \
	main.cpp	 \
	nsWidgetTest.cpp \
	../../../webshell/tests/viewer/nsStubs.cpp \
	$(NULL)

LIBS := \
	-lraptorgfx \
	-lgmbase$(MOZ_TOOLKIT) \
	$(TK_LIBS) \
	-lnetlib \
	-lremoturl \
	-lnetcnvts \
	-lgophurl \
	-labouturl \
	-lsockstuburl \
	-lhttpurl \
	-lmimetype \
	-lfileurl \
	-lftpurl \
	-lpwcac \
	-lnetwork \
	-lnetcache \
	-lpref \
	-lsecfree \
	-lnetutil \
	-l$(MOZ_LIB_UTIL_PREFIX)util \
	-limg \
	$(PNG_LIBS) \
	$(JPEG_LIBS) \
	-lraptorbase \
	-lxpcom \
	-lreg \
	-l$(MOZ_LIB_JS_PREFIX)js \
	-lwidget$(MOZ_TOOLKIT) \
	-lxp \
	$(ZLIB_LIBS) \
	$(NSPR_LIBS) \
	$(NULL)


CFLAGS += $(TOOLKIT_CFLAGS)

include $(topsrcdir)/config/rules.mk

