DEPTH=..\..\..
#IGNORE_MANIFEST=1

MODULE=raptor 
MAKE_OBJ_TYPE   = DLL
DLLNAME = raptorwidget
DLL=.\$(OBJDIR)\$(DLLNAME).dll
RESFILE = widget.res

CPPSRCS  = nsWinWidgetFactory.cpp

CPP_OBJS = .\$(OBJDIR)\nsWinWidgetFactory.obj


DEFINES =-D_IMPL_NS_WIDGET

LINCS=                                  \
	-I$(PUBLIC)\raptor              \
	-I$(PUBLIC)\xpcom               \
	-I..\xpwidgets               \
        -I..\windows               \
        -I$(PUBLIC)\netlib \
        -I$(PUBLIC)\dom \
	$(NULL)

LCFLAGS =                               \
	$(LCFLAGS)                      \
	-D_IMPL_NS_WIDGET               \
	$(NULL)

WIN_LIBS=                               \
 comctl32.lib                           \
 comdlg32.lib                           \
 imm32.lib								\
 Uuid.lib								\
 ole32.lib								\
 shell32.lib

LLIBS= \
 $(DIST)\lib\xpcom.lib                \
 $(DIST)\lib\raptorhtmlpars.lib		\
 $(DIST)\lib\raptorgfxwin.lib           \
 $(DIST)\lib\raptorbasewidget_s.lib		  \
 $(DIST)\lib\raptorwidget_s.lib	        \
 $(LIBNSPR) 

include <$(DEPTH)\config\rules.mak>

install:: $(DLL)
	$(MAKE_INSTALL) .\$(OBJDIR)\$(DLLNAME).dll $(DIST)\bin
	$(MAKE_INSTALL) .\$(OBJDIR)\$(DLLNAME).lib $(DIST)\lib

clobber::
	rm -f $(DIST)\bin\$(DLLNAME).dll
	rm -f $(DIST)\lib\$(DLLNAME).lib
