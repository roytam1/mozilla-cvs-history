DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE               = widget
LIBRARY_NAME         = widget_membuf
MODULE_NAME          = nsWidgetMembufModule
#FORCE_STATIC         = 1
MOZILLA_INTERNAL_API = 1
EXPORT_LIBRARY       = 1
LIBXUL_LIBRARY       = 1
IS_COMPONENT         = 1
GRE_MODULE           = 1

REQUIRES =  xpcom \
            string \
            dom \
            accessibility \
            content \
            content_xul \
            gfx \
            gfxwin \
            gfxmembuf \
            necko \
            pref \
            plugin \
            timer \
            uconv \
            intl \
            locale \
            webshell \
            docshell \
            layout \
            xuldoc \
            view \
            $(NULL)

CPPSRCS =   membufAppShell.cpp \
            membufToolkit.cpp \
            membufWindow.cpp \
            membufLookAndFeel.cpp \
            membufBidiKeyboard.cpp \
            membufWidgetFactory.cpp \
            membufClipboard.cpp \
            $(NULL)

DEFINES += -D_IMPL_NS_WIDGET -DMOZ_AIMM -DMOZ_UNICODE -DMEMBUF_DEBUG

EXTRA_DSO_LIBS = gkgfx

LOCAL_INCLUDES = \
                 -I. \
                 -I$(srcdir)/../xpwidgets \
                 -I$(srcdir) \
		$(shell allegro-config --cflags) \
		$(NULL)

#OS_LIBS += comctl32.lib comdlg32.lib uuid.lib ole32.lib shell32.lib oleaut32.lib

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/$(LIB_PREFIX)xpwidgets_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(shell allegro-config --shared) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

