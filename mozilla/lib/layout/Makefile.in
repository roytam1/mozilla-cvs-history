		  $(NULL)

CPPSRCS		= streams.cpp \
		  fsfile.cpp \
		  editor.cpp \
		  edtbuf.cpp \
		  edtcmd.cpp \
		  edtele.cpp \
		  edtjava.cpp \
		  edtlist.cpp \
		  edtsave.cpp \
		  edtutil.cpp \
		  $(NULL)
