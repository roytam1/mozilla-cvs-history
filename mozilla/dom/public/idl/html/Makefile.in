export:: genx genjs $(IDLSRCS)
	@echo +++ make: generating xpcom headers
	$(DIST)/bin/idlc -d genx -x $(IDLSRCS)
	@echo +++ make: generating JavaScript stubs
	$(DIST)/bin/idlc -d genjs -j $(IDLSRCS)

