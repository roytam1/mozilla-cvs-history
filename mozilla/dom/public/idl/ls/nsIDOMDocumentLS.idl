#include "domstubs.idl"

/**
 * The nsIDOMDocumentLS interface has methods that let you load XML
 * into the document in question and serialize the document out.
 *
 * For more information on this interface please see
 * XXX this will change
 * http://www.w3.org/TR/2002/WD-DOM-Level-3-LS-20020725/load-save.html
 */

[scriptable, uuid(96fe349f-fd68-4e3f-be50-2b69aa22e1a9)]
interface nsIDOMDocumentLS : nsISupports
{
  attribute boolean         async;
                              // raises(DOMException) on setting

  void               abort();
  boolean            load(in DOMString uri);
  boolean            loadXML(in DOMString source);
  DOMString          saveXML(in nsIDOMNode snode)
                         raises(DOMException);
};
