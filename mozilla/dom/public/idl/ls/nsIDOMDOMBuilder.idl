#include "domstubs.idl"

/**
 * The nsIDOMDOMBuilder interface provides facilities for creating a DOM
 * from character or byte data.
 *
 * For more information on this interface please see
 * XXX this will change
 * http://www.w3.org/TR/2002/WD-DOM-Level-3-LS-20020725/load-save.html
 */

[scriptable, uuid(b6d02912-5ad2-417f-ab84-2626cbfcbf64)]
interface nsIDOMDOMBuilder : nsISupports
{
  attribute nsIDOMDOMEntityResolver entityResolver;
  attribute nsIDOMDOMErrorHandler   errorHandler;
  attribute nsIDOMDOMBuilderFilter  filter;
  
  void               setFeature(in DOMString name, 
                                in boolean state)
                                        raises(DOMException);
  boolean            canSetFeature(in DOMString name, 
                                   in boolean state);
  boolean            getFeature(in DOMString name)
                                        raises(DOMException);
  
  nsIDOMDocument      parseURI(in DOMString uri);
  nsIDOMDocument      parse(in nsIDOMDOMInputSource is)
                                        raises(DOMException);

  // ACTION_TYPES
  const unsigned short      ACTION_REPLACE                 = 1;
  const unsigned short      ACTION_APPEND_AS_CHILDREN      = 2;
  const unsigned short      ACTION_INSERT_AFTER            = 3;
  const unsigned short      ACTION_INSERT_BEFORE           = 4;

  void               parseWithContext(in nsIDOMDOMInputSource is, 
                                      in nsIDOMNode cnode, 
                                      in unsigned short action)
                                        raises(DOMException);
};
