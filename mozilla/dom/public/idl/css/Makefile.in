DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= raptor

IDLSRCS		= \
		CSS2Properties.idl \
		CSSFontFaceRule.idl \
		CSSImportRule.idl \
		CSSMediaRule.idl \
		CSSPageRule.idl \
		CSSRule.idl \
		CSSRuleList.idl \
		CSSStyleDeclaration.idl \
		CSSStyleRule.idl \
		CSSStyleSheet.idl \
		CSSUnknownRule.idl \
		CSSValue.idl \
		Rect.idl \
		Counter.idl \
		RGBColor.idl \
		CSSPrimitiveValue.idl \
		$(NULL)

include $(DEPTH)/config/rules.mk

GARBAGE		+= genx genjs

genx genjs:
	-mkdir $@

export:: genx genjs $(IDLSRCS)
	@echo +++ make: generating xpcom headers
	$(DIST)/bin/idlc -d genx -x $(IDLSRCS)
	@echo +++ make: generating JavaScript stubs
	$(DIST)/bin/idlc -d genjs -j $(IDLSRCS)

install::
	$(NSINSTALL) genx/nsIDOM*.h $(DEPTH)/dom/public/css
	$(NSINSTALL) genjs/nsJS*.cpp $(DEPTH)/dom/src/css

