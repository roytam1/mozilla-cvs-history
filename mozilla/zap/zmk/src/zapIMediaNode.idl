#include "nsISupports.idl"

interface zapIMediaGraph;
interface zapIMediaSource;
interface zapIMediaSink;
interface nsIPropertyBag2;

/**
 * \ingroup ZMK_MODULE
 */
[scriptable, uuid(8477a773-8b2e-4e8b-8ca7-d37886750074)]
interface zapIMediaNode : nsISupports
{
  /**
   * Called when this node is first added to a media graph.
   * 'id' is the identifier by which this node will be known
   * in 'graph'.
   */
  void addedToGraph(in zapIMediaGraph graph, in ACString id,
                    in nsIPropertyBag2 node_pars);

  /**
   * Called when this node is removed from the graph.
   * The framework will call this method only after all connections
   * have been disconnected.
   */
  void removedFromGraph(in zapIMediaGraph graph);

  /**
   * Return a source with the given parameters.
   * Throw error if the source as characterized by the parameter map
   * is not supported, if this is a sink-only node, or (optionally) if
   * all sources on the node are already connected.
   */
  zapIMediaSource getSource(in nsIPropertyBag2 source_pars);

  /**
   * Returns a sink with the given parameters.
   * Throws error if the sink as characterized by the parameter map is
   * not supported, if this is a source-only node, or (optionally) if
   * all sinks on the node are already connected.
   */
  zapIMediaSink getSink(in nsIPropertyBag2 sink_pars);
};

%{ C++
#define ZAP_MEDIANODE_CONTRACTID_PREFIX "@mozilla.org/zap/medianode;type="
%}

