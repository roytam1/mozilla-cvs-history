#include "nsISupports.idl"

interface zapIMediaSource;
interface zapIMediaFrame;

/**
 * \ingroup ZMK_MODULE
 */
[scriptable, uuid(76ab2487-e3bb-41de-872e-e587fc790ec5)]
interface zapIMediaSink : nsISupports
{
  /**
   * Called by the graph to connect a source to this sink.
   * Will be called after a successful source->connectSink().
   */
  void connectSource(in zapIMediaSource source);
  
  /**
   * Called by the graph to disconnect the previously connected source
   * from this sink. Will be followed by a call source->disconnectSink().
   */
  void disconnectSource(in zapIMediaSource source);

  /**
   * Called by an active source to push a frame to the sink.
   * If the sink cannot accept the frame (either because it is not a
   * passive sink, or because there is buffer overrun) the sink must
   * throw an exception
   */
  void consumeFrame(in zapIMediaFrame frame);
};
