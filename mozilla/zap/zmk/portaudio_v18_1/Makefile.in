DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk


MODULE		= portaudio_v18_1
LIBRARY_NAME	= moz_portaudio_v18_1
#LIB_IS_C_ONLY   = 1
FORCE_STATIC_LIB= 1

CSRCS		= \
		pa_common/pa_convert.c \
		pa_common/pa_lib.c \
		$(NULL)

EXPORTS         = \
		pa_common/portaudio.h \
		$(NULL)

ifeq ($(OS_ARCH),WINNT)
CSRCS		+= \
		pa_win_ds/dsound_wrapper.c \
		pa_win_ds/pa_dsound.c \
		$(NULL)


OS_LIBS += dsound.lib winmm.lib
endif

ifeq ($(OS_ARCH),Linux)
CSRCS		+= \
		pa_unix_oss/pa_unix.c \
		pa_unix_oss/pa_unix_oss.c \
		$(NULL)
endif

ifeq ($(OS_ARCH),Darwin)
CSRCS		+=\
		pa_mac_core/pa_mac_core.c\
		pablio/ringbuffer.c\
		$(NULL)

OS_LIBS += -framework CoreAudio -framework AudioToolbox
endif


