DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/rules.mk

FILES := \
	sidebar.rdf \
	accounts.rdf \
	contacts.rdf \
	calls.rdf \
	prefs.rdf \
	locations.rdf \
	$(NULL)

FILES := $(addprefix $(srcdir)/, $(FILES))

libs::
