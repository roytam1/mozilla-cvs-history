<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- collapsable group widget -->
  <binding id="cgroup">
    <content>
      <xul:vbox class="cgroup" flex="1" xbl:inherits="closed">
        <xul:hbox class="cgroup-title">
          <xul:label xbl:inherits="value=title" style="cursor:inherit"/>
          <xul:spacer flex="1"/>
          <xul:button class="cgroup-title-button"/>
        </xul:hbox>
        <xul:vbox class="cgroup-body">
          <children/>
        </xul:vbox>
      </xul:vbox>
    </content>
    <handlers>
      <handler event="click" button="0">
      <![CDATA[
        // toggle 'closed' attribute if the title was clicked:
        if (event.originalTarget.parentNode.className.indexOf("cgroup-title") == -1 &&
            event.originalTarget.className.indexOf("cgroup-title") == -1)
          return;
        if (this.getAttribute("closed") == "true") 
          this.setAttribute("closed", "false");
        else
           this.setAttribute("closed", "true");
        event.cancelBubble = true;
      ]]>
      </handler>
    </handlers>
  </binding>

  <!-- 'info' group widget -->
  <binding id="igroup">
    <content>
      <xul:box class="igroup-content">
        <children/>
<!--        <xul:spacer flex="1"/>-->
        <xul:button class="igroup-info-button"/>
      </xul:box>
      <children includes="info"/>
    </content>
    <handlers>
      <handler event="click" button="0">
      <![CDATA[
        // toggle 'showinfo' attribute if the info button was clicked:
        if (event.originalTarget.className.indexOf("igroup-info-button") == -1)
          return;
        if (this.getAttribute("showinfo") == "true") 
          this.setAttribute("showinfo", "false");
        else
           this.setAttribute("showinfo", "true");
        event.cancelBubble = true;
      ]]>
      </handler>
    </handlers>
  </binding>

  <!-- info row widget -->
  <binding id="irow" >
    <content>
      <children/>
      <xul:button class="irow-info-button"/>
      <xul:irow-hidden>
        <children includes="info"/>
      </xul:irow-hidden>
    </content>
    <handlers>
      <handler event="click" button="0">
      <![CDATA[
        // toggle 'showinfo' attribute if the info button was clicked:
        if (event.originalTarget.className.indexOf("irow-info-button") == -1)
          return;
        if (this.getAttribute("showinfo") == "true") {
          this.setAttribute("showinfo", "false");
          this.parentNode.removeChild(this.infoNode);
        }
        else {
           this.setAttribute("showinfo", "true");
           // insert the info content as a column-spanning row:
           if (!this.infoNode)
             this.infoNode = this.getElementsByTagName("info").item(0);
           this.parentNode.insertBefore(this.infoNode, this.nextSibling);
        }
        event.cancelBubble = true;
      ]]>
      </handler>
    </handlers>
  </binding>

