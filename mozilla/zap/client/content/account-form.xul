<!DOCTYPE overlay SYSTEM "chrome://zap/locale/zap.dtd">

<overlay id="zap_account_form_overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <vbox flex="1" id="zap_account_form">
    <grid>
      <columns><column/><column flex="1"/></columns>
      <rows>
        <row>
          <label control="http://home.netscape.com/NC-rdf#Name" 
                 value="Account Name:"/>
          <textbox id="http://home.netscape.com/NC-rdf#Name"/>
        </row>
          <row>
            <label control="urn:mozilla:zap:authentication_realm" 
                   value="Authentication Realm:"/>
            <textbox id="urn:mozilla:zap:authentication_realm"/>
          </row>
          <row>
            <label control="urn:mozilla:zap:authentication_username" 
                   value="Username:"/>
            <textbox id="urn:mozilla:zap:authentication_username"/>
          </row>
          <row>
            <label control="urn:mozilla:zap:authentication_password" 
                   value="Password:"/>
            <textbox id="urn:mozilla:zap:authentication_password" type="password"/>
          </row>
      </rows>
    </grid>

    <cgroup title="Registration">
      <checkbox label="Register automatically" id="urn:mozilla:zap:automatic_registration"/>
      <grid>
        <columns><column/><column flex="1"/></columns>
        <rows>
          <row>
            <label control="urn:mozilla:zap:registrar_server" 
                   value="Registrar Server:"/>
            <textbox id="urn:mozilla:zap:registrar_server"/>
          </row>
          <row>
            <label control="urn:mozilla:zap:address_of_record" 
                   value="Address-of-record:"/>
            <textbox id="urn:mozilla:zap:address_of_record"/>
          </row>
          <row>
            <label control="urn:mozilla:zap:suggested_registration_interval" 
                   value="Registration interval:"/>
            <textbox id="urn:mozilla:zap:suggested_registration_interval"/>
          </row>
        </rows>
      </grid>
    </cgroup>

    <cgroup title="Active in Identity Profiles:">
      <vbox id="identities_template"
            ref="urn:mozilla:zap:identities"
            datasources="rdf:null">
        <template>
          <rule>
            <conditions>
              <content uri="?container"/>
              <member container="?container" child="?identity"/>
              <triple subject="urn:mozilla:zap:root"
                      predicate="urn:mozilla:zap:current-account"
                      object="?account"/>
              <triple subject="?identity"
                      predicate="urn:mozilla:zap:account"
                      object="?account"/>
            </conditions>
            <bindings>
              <binding subject="?identity"
                       predicate="http://home.netscape.com/NC-rdf#Name"
                       object="?name"/>
            </bindings>
            <action>
              <checkbox uri="?identity" label="?name" checked="true"/>
            </action>
          </rule>
          <rule>
            <conditions>
              <content uri="?container"/>
              <member container="?container" child="?identity"/>
            </conditions>
            <bindings>
              <binding subject="?identity"
                       predicate="http://home.netscape.com/NC-rdf#Name"
                       object="?name"/>
            </bindings>
            <action>
              <checkbox uri="?identity" label="?name"/>
            </action>
          </rule>
        </template>
      </vbox>
    </cgroup>
  </vbox>
</overlay>