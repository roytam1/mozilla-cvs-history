<?xml-stylesheet href="chrome://zap/skin/zap.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zap/locale/zap.dtd">

<page id="zap_contacts"
      class="zap-form"
      xmlns:html="http://www.w3.org/1999/xhtml"
      xmlns = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      onload="initPage()" >
  <!-- Scripts -->
  <script type="application/x-javascript" src="chrome://global/content/globalOverlay.js"/>
  <script type="text/javascript" src="chrome://zap/content/chromeUtils.js"/>

  <script type="application/x-javascript">
  <![CDATA[
    var wContactsTree;
    var wContactBox;
    var wCallInteractionState;
    var wCurrentContact;

    function initPage() {
      widgetStateChanged = formWidgetStateChanged;

      wContactsTree = document.getElementById("contacts");
      wContactBox = document.getElementById("contact-box");
      wCallInteractionState = document.getElementById("call-interaction-state");

      wContactsTree.database.AddDataSource(parent.wContactsDS);
      wContactsTree.builder.rebuild();
      selectResource(wContactsTree, parent.getSelectedSidebarResource());
    }

    function contactsSelectionChange() {
      // make sure we have a non-sticky buttonbar:
      setButtonBarState(false);

      // enable interaction buttons:
      wCallInteractionState.setAttribute("disabled", "false");

      var resource = getSelectedResource(wContactsTree);
      
      if (resource != parent.getSelectedSidebarResource()) {
        // XXX what we actually want to do is to update the sidebar selection to 
        // reflect the new choice, but this is difficult because not all contacts
        // are in the sidebar. Let's clear the selection for the time being:
        parent.clearSidebarSelection();
      }

      if (!resource) {
        wContactBox.hidden = true;
        return;
      }
      wCurrentContact = parent.Contact.instantiate();
      wCurrentContact.initWithResource(resource);
      wCurrentContact.fillDocument(document);
      wContactBox.hidden = false;
    }

    function clearSelection() {
      var selection = wContactsTree.view.selection;
      if (selection)
       selection.clearSelection();
    }

    function add() {
      clearSelection();
      wCurrentContact = parent.Contact.instantiate();

      // make sure we have a sticky buttonbar:
      setButtonBarState(true);

      // disable call interaction buttons:
      wCallInteractionState.setAttribute("disabled", "true");

      wCurrentContact.fillDocument(document);
      wContactBox.hidden = false;
      document.getElementById("http://home.netscape.com/NC-rdf#Name").select();
    }

    function del() {
      var ok = parent.wPromptService.confirm(null, "Delete Contact", 
                                             "Are you sure you wish to delete contact '"+wCurrentContact["http://home.netscape.com/NC-rdf#Name"]+"'?");
      if (ok) {
        wCurrentContact.remove();
      }
    }

    function commit() {
      if (wCurrentContact.resource) {
        wCurrentContact.updateFromDocument(document);
      }
      else {
        // we're adding a new record
        wCurrentContact.createFromDocument(document);
        // select newly created contact:
        selectResource(wContactsTree, wCurrentContact.resource);
      }
    }

    function cancel() {
      if (wCurrentContact.resource)
        wCurrentContact.fillDocument(document);
      else {
        // we're canceling adding a record
        wContactBox.hidden = true;
        // reset sticky button bar
        setButtonBarState(false);
      }
    }

    function call() {
      // copy sip uri to URLField:
      parent.wURLField.value = wCurrentContact["urn:mozilla:zap:sip_uri"];
      parent.cmdGo();
    }
  ]]>
  </script>

  <broadcasterset>
    <broadcasterset id="call-interaction-state" disabled="false"/>
  </broadcasterset>

  <vbox flex="1">
  <vbox class="zap-form-list" id="contacts-box" flex="1" 
        height="200" minheight="50" persist="height">
    <box class="zap-form-title-box">
      <label value="Contacts" crop="right"/>
      <spacer flex="1"/>
      <button label="Add new Contact" oncommand="add()"/>
    </box>
    <tree id="contacts" flex="1"
          class="zap-form-tree"
          seltype="single"
          datasources="rdf:null"
          ref="urn:mozilla:zap:contacts"
          onselect="contactsSelectionChange()"
          flags="dont-build-content">
      <treecols>
        <treecol id="contacts_col_name" label="Name" flex="1"/>
        <treecol id="contacts_col_sip_uri" label="SIP URI" flex="1"/>
      </treecols>
      <template>
        <rule>
          <conditions>
            <content uri="?container"/>
            <member container="?container" child="?node"/>
          </conditions>
          <bindings>
            <binding subject="?node"
                     predicate="http://home.netscape.com/NC-rdf#Name"
                     object="?name"/>
            <binding subject="?node"
                     predicate="urn:mozilla:zap:sip_uri"
                     object="?sip_uri"/>
          </bindings>
          <action>
            <treechildren>
              <treeitem uri="?node">
                <treerow>
                  <treecell label="?name"/>
                  <treecell label="?sip_uri"/>
                </treerow>
              </treeitem>
            </treechildren>
          </action>
        </rule>
      </template>
    </tree>
  </vbox>
  <splitter class="zap-form-splitter"/>
  <vbox flex="100" height="200" persist="height" class="zap-form-body">
    <vbox id="contact-box" hidden="true" flex="1">
      <box class="zap-form-title-box">
        <label value="Contact" crop="right"/>
        <spacer flex="1"/>
        <button id="call-button" label="Call" oncommand="call()" observes="call-interaction-state"/>
        <button id="delete-button" label="Delete" oncommand="del()" observes="call-interaction-state"/>
      </box>
      <grid>
        <columns><column/><column flex="1"/><column/></columns>
        <rows>
          <irow>
            <label control="http://home.netscape.com/NC-rdf#Name" value="Name:"/>
            <textbox type="zap-formwidget" id="http://home.netscape.com/NC-rdf#Name"/>
            <info>
              <description>
                Human-readable name for this contact.
              </description>
            </info>
          </irow>
          <irow>
            <label control="urn:mozilla:zap:sip_uri" value="SIP URI:"/>
            <textbox type="zap-formwidget" id="urn:mozilla:zap:sip_uri"
                     validator="validateSIPURI" />
            <info>
              <description>
              SIP address for this contact. Example: 
              <html:br/><html:i>sip:username@the_sip_service_provider.com</html:i>
              </description>
            </info>
          </irow>
        </rows>
      </grid>
      <igroup>
        <checkbox type="zap-formwidget" label="Display in sidebar" 
                  id="urn:mozilla:zap:isfriend"/>
        <info>
          <description>
          If checked, this contact will be displayed in the sidebar for quick access and, in a future zap release, for displaying presence information.
          </description>
        </info>
      </igroup>
      <igroup orient="vertical">
        <label control="urn:mozilla:zap:notes" value="Notes:"/>
        <textbox type="zap-formwidget" id="urn:mozilla:zap:notes" multiline="true" rows="8" flex="1"/>
        <info>
          <description>
          Use this field for any additional information you would like to record for this contact.
          </description>
        </info>
      </igroup>
    </vbox>
  </vbox>
  </vbox>
  <hbox class="zap-form-hidden-buttonbar" id="buttonbar">
    <spacer flex="1"/>
    <button id="apply" label="Apply changes" oncommand="commit()" />
    <button label="Cancel" oncommand="cancel()" />
  </hbox>
</page>
