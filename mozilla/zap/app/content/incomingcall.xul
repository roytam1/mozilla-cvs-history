<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://zap/locale/zap.dtd">

<window id="zap"
        width="400" height="300" screenX="40" screenY="40" 
        persist="width height screenX screenY sizemode"
        onload="windowInit();"
        onunload="windowClose();"
        title = "zap! incoming call"
        xmlns = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- Scripts -->
  <script type="application/x-javascript" src="chrome://zap/content/incomingcall.js"/>

  <!-- Commands -->
  <commandset>
    <command id="cmd_accept" oncommand="cmdAccept()"/>
    <command id="cmd_hangup" oncommand="cmdHangup()"/>
    <command id="cmd_clearlog" oncommand="cmdClearLog()"/>
  </commandset>


  <!-- Main content box -->
  <vbox flex="1" style="overflow:auto;">
    <groupbox>
      <caption label="Call Details:"/>
      <hbox>
        <label value="Caller:" control="caller-address"/>
        <textbox id="caller-address" flex="1" readonly="true"/>
      </hbox>
      <hbox>
        <label value="Status:" control="call-status"/>
        <textbox id="call-status" flex="1" readonly="true"/>
      </hbox>
    </groupbox>
    <groupbox>
      <caption label="Actions"/>
      <hbox pack="center">
        <button label="Accept" command="cmd_accept"/>
        <button label="Hang Up/Decline" command="cmd_hangup"/>
      </hbox>
    </groupbox>
    <groupbox flex="1">
      <caption label="call log"/>
      <textbox id="log" multiline="true" readonly="true" flex="1"/>
      <hbox pack="center">
        <button label="Clear Log" command="cmd_clearlog"/>
      </hbox>
    </groupbox>
  </vbox>
</window>
