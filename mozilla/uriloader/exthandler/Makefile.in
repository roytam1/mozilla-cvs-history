DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@

include $(DEPTH)/config/autoconf.mk

ifeq ($(MOZ_WIDGET_TOOLKIT),os2)
VPATH		= @srcdir@:@srcdir@/os2
else
VPATH		= @srcdir@:@srcdir@/unix
endif

MODULE = exthandler
LIBRARY_NAME    = exthandler_s

ifeq ($(MOZ_WIDGET_TOOLKIT),os2)
OSDIR	= os2
else
OSDIR	= unix
endif

ifeq ($(MOZ_OS2_TOOLS),VACPP)
OSHELPER	= $(OSDIR)/nsOSHelperAppService.cpp
else
OSHELPER	= nsOSHelperAppService.cpp
endif

EXPORTS = 	nsExternalHelperAppService.h \
		$(OSDIR)/nsOSHelperAppService.h \
		nsHelperAppRDF.h	    \
			$(NULL)

XPIDLSRCS = \
	nsCExternalHandlerService.idl	\
	nsIExternalProtocolService.idl \
	nsIExternalHelperAppService.idl	\
	$(NULL)

CPPSRCS	= \
	nsExternalHelperAppService.cpp	\
	$(OSHELPER) \
	$(NULL)


# we don't want the shared lib, but we want to force the creation of a static lib.
override NO_SHARED_LIB=1
override NO_STATIC_LIB=

include $(topsrcdir)/config/rules.mk

# tmp fix for vpath changes
export::
	$(RM) -f $(OSDIR)/*.o

