DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= caps
LIBRARY_NAME	= caps
IS_COMPONENT	= 1

CPPSRCS		= \
		nsBasePrincipal.cpp \
		nsSystemPrincipal.cpp \
		nsCertificatePrincipal.cpp \
		nsCodebasePrincipal.cpp \
		nsJSPrincipals.cpp \
		nsScriptSecurityManager.cpp \
		nsSecurityManagerFactory.cpp \
		$(NULL)

CHROME_FILES    = \
                $(srcdir)/security.properties

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		-L$(DIST)/lib \
		$(ZLIB_LIBS) \
		-lxpcom \
		-lmozjs \
		$(NSPR_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

INCLUDES	+= -I$(topsrcdir)/include -I$(srcdir)/../include

install::
                $(INSTALL) $(CHROME_FILES) $(DIST)/bin/chrome/security/locale/en-US

