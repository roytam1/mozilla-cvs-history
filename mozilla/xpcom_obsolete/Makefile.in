DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= xpcom_obsolete
LIBRARY_NAME	= xpcom_obsolete

REQUIRES	= string \
		  xpcom \
		  $(NULL)


LOCAL_INCLUDES	= \
		-I$(srcdir)/../io \
		$(NULL)

ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
REQUIRES		+= macmorefiles
endif

CPPSRCS		= \
		nsSpecialSystemDirectory.cpp \
		nsFileSpec.cpp \
		nsFileSpecImpl.cpp \
		nsFileStream.cpp \
		nsIFileStream.cpp \
		dlldeps.cpp \
		$(NULL)

EXPORTS         =\
		nsFileSpec.h \
		nsFileSpecImpl.h \
		nsFileStream.h \
		nsIFileStream.h \
		nsSpecialSystemDirectory.h \
		$(NULL)	

XPIDLSRCS	= \
		nsIByteArrayInputStream.idl \
		nsIFileSpec.idl \
		$(NULL)

# Force use of PIC
FORCE_USE_PIC	= 1

include $(topsrcdir)/config/rules.mk

EXTRA_DSO_LDOPTS= \
                $(NSPR_LIBS) \
                $(XPCOM_LIBS) \
                $(NULL)

# pull in MoreFiles for MacOSX
ifneq (,$(filter mac cocoa,$(MOZ_WIDGET_TOOLKIT)))
EXTRA_DSO_LDOPTS += $(DEPTH)/dist/lib/libmacmorefiles_s.a
endif

ifeq ($(OS_ARCH),BeOS)
EXTRA_DSO_LDOPTS += -lbe
endif

ifeq ($(OS_ARCH),WINNT)
EXTRA_DSO_LDOPTS += shell32.lib ole32.lib
endif
