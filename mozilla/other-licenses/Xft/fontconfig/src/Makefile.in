DEPTH	= ../../../..

topsrcdir       = @top_srcdir@
srcdir          = @srcdir@
VPATH           = @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= fontconfig
LIBRARY_NAME	= fontconfig
EXPORT_LIBRARY	= 1

REQUIRES	= \
		freetype2 \
		fontconfig \
		expat

CSRCS		= \
		fcatomic.c \
		fcavl.c \
	        fcblanks.c \
	        fccache.c \
	        fccfg.c \
	        fccharset.c \
	        fcdbg.c \
	        fcdefault.c \
	        fcdir.c \
	        fcfreetype.c \
	        fcfs.c \
	        fcinit.c \
		fclist.c \
	        fcmatch.c \
	        fcmatrix.c \
	        fcname.c \
	        fcpat.c \
	        fcstr.c \
	        fcxml.c

# make it a static lib only
FORCE_STATIC_LIB=1

include $(topsrcdir)/config/rules.mk

DEFINES		+=-DFC_FALLBACK_FONTS=\"/usr/X11R6/lib/X11/fonts/Type1\"

ifdef MOZ_XFT_SYSTEM_FREETYPE2
CFLAGS		+= $(FT2_CFLAGS)
endif
