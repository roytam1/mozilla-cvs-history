# Branding Makefile
#  - jars chrome artwork
#  - copies winstaller artwork to objdir

DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/rules.mk

firefox.ico: firefox.ico.in
  $(INSTALL) $^ $(topsrcdir)/$(OBJDIR)/browser/app/

browser.ico: firefox.ico.in
  $(INSTALL) $^ $(topsrcdir)/$(OBJDIR)/toolkit/mozapps/installer/wizard/windows/setuprsc/

firefox.icns: firefox.icns.in
  $(INSTALL) $^ $(topsrcdir)/$(OBJDIR)/browser/app/macbuild/
