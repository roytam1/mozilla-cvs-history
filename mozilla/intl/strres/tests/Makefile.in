DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

CPPSRCS		= StringBundleTest.cpp

SIMPLE_PROGRAMS	= $(CPPSRCS:.cpp=)

EXPORT_RESOURCE	= \
		$(srcdir)/strres.properties \
		$(srcdir)/strres-test.html \
		$(srcdir)/strres-test.xul \
		$(srcdir)/strres-test.dtd \
		$(srcdir)/strres-test.js \
		$(NULL)

EXPORT_GLOBAL_RESOURCE = $(srcdir)/strres.js

ifndef NECKO
NETLIB_LIBS	= \
		-lnetlib \
		-labouturl \
		-lfileurl \
		-lremoturl \
		-lgophurl \
		-lnetcnvts \
		-lsockstuburl \
		-lftpurl \
		-lmimetype \
		-lpwcac \
		-lhttpurl \
		-lnetwork \
		-lnetcache \
		$(NULL)
else
NETLIB_LIBS	= -lneckoutil_s
endif

LIBS		= \
		-lmozjs \
		-limg \
		-lmozutil \
		-lxp \
		-lxpcom \
		$(NETLIB_LIBS) \
		$(TIMER_LIBS) \
		$(ZLIB_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

INCLUDES	+= -I$(srcdir)/../src

install::
	$(INSTALL) $(EXPORT_RESOURCE) $(DIST)/bin/res
	$(INSTALL) $(EXPORT_GLOBAL_RESOURCE) $(DIST)/bin/chrome/global/content/default

