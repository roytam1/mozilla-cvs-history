DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= ucvasia
LIBRARY_NAME	= ucvasia
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsUCvAsiaModule
REQUIRES	= xpcom \
		  string \
		  uconv \
		  $(NULL)

CPPSRCS		= \
		nsUCvAsiaModule.cpp \
		$(NULL)

SHARED_LIBRARY_LIBS = \
	$(DIST)/lib/$(LIB_PREFIX)ucvutil_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)ucvja_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)ucvtw2_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)ucvtw_s.$(LIB_SUFFIX) \
	$(DIST)/lib/$(LIB_PREFIX)ucvko_s.$(LIB_SUFFIX) \
	$(NULL)

LOCAL_INCLUDES	= -I$(srcdir)/../util \
				-I$(srcdir)/../ucvja \
				-I$(srcdir)/../ucvtw2 \
				-I$(srcdir)/../ucvtw \
				-I$(srcdir)/../ucvko \
				$(NULL)


EXTRA_DSO_LDOPTS += $(MOZ_COMPONENT_LIBS)

include $(topsrcdir)/config/rules.mk

