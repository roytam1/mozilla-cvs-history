DEPTH		= ../../../..
THEME_ROOT_DEPTH = @srcdir@/../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(THEME_ROOT_DEPTH)/theme.mk

SAMPLES_DIR	= $(DIST)/bin/chrome/skins/$(THEME)/global/skin

EXPORT_RESOURCE_SAMPLES = \
	box.css \
	button.css \
	checkbox.css \
	commonDialog.css \
	console.css \
	filepicker.css \
	formatting.css \
	global.css \
	menu.css \
	menubutton.css \
	menulist.css \
	radio.css \
	scrollbars.css \
	splitter.css \
	tabcontrol.css \
	colorpicker.css \
	textfield.css \
	toolbar.css \
	tree.css \
	wizardOverlay.css \
	buttonBindings.xml \
	classicBindings.xml \
	menulistBindings.xml \
	tabBindings.xml \
	treeBindings.xml \
	scrollbar-slider-bg.gif \
	error-icon.gif \
	message-icon.gif \
	question-icon.gif \
	alert-icon.gif \
	$(NULL)

include $(topsrcdir)/config/rules.mk

GARBAGE		+= $(addprefix $(SAMPLES_DIR)/, $(EXPORT_RESOURCE_SAMPLES))

install::
	$(INSTALL) $(addprefix $(srcdir)/, $(EXPORT_RESOURCE_SAMPLES)) $(SAMPLES_DIR)

