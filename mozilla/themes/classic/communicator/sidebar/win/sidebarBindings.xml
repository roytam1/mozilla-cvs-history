<?xml version="1.0"?>

<bindings id="sidebarBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  
  <binding id="panelheader" extends="xul:button">
    <content>
      <xul:box class="panelheader-box-1" inherits="selected" flex="1">
        <xul:box class="panelheader-box-2" autostretch="never" flex="1">
          <xul:image class="panelheader-grippy-icon" inherits="selected"/>
          <xul:image class="panelheader-image" inherits="src"/>
          <xul:box orient="vertical" flex="1">
            <xul:text class="panelheader-icon" inherits="value" crop="right"/>
          </xul:box>
          <xul:spring flex="1"/>
        </xul:box>
        <xul:box class="panelheader-texture"/>
      </xul:box>
    </content>
  </binding>
</bindings>          