<?xml version="1.0"?>

<bindings id="navigatorBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- :::/ navbar \ ::::::::::::::::::::::::::::::::::::::::::::::::::: -->

  <binding id="nav-bar-inner" extends="xul:box">
    <content>
      <xul:box class="navbar-inner-groove-lft" orient="vertical">
        <xul:spring class="navbar-inner-groove-lft-top"/>
        <xul:spring class="navbar-inner-groove-lft-mid" flex="1"/>
        <xul:spring class="navbar-inner-groove-lft-btm"/>
      </xul:box>
      <xul:box flex="1" class="navbar-inner-border-outer">
        <xul:box flex="1" class="navbar-inner-border-middle">
          <xul:box flex="1" class="navbar-inner-border-inner" autostretch="never">
            <children/>
          </xul:box>
        </xul:box>
      </xul:box>
      <xul:box class="navbar-inner-groove-rit" orient="vertical">
        <xul:spring class="navbar-inner-groove-rit-top"/>
        <xul:spring class="navbar-inner-groove-rit-mid" flex="1"/>
        <xul:spring class="navbar-inner-groove-rit-btm"/>
      </xul:box>
    </content>
  </binding>
  
  <binding id="urlbar-group" extends="xul:box">
    <content>
      <xul:box class="urlbar-lft" orient="vertical">
        <xul:spring class="urlbar-lft-top"/>
        <xul:spring class="urlbar-lft-mid" flex="1"/>
        <xul:spring class="urlbar-lft-btm"/>
      </xul:box>
      <xul:box flex="1" class="urlbar-mid" orient="vertical">
        <xul:spring class="urlbar-mid-top"/>
        <xul:box class="urlbar-mid-mid" flex="1">
          <children/>
        </xul:box>
        <xul:spring class="urlbar-mid-btm"/>
      </xul:box>
      <xul:box class="urlbar-rit" orient="vertical">
        <xul:spring class="urlbar-rit-top"/>
        <xul:spring class="urlbar-rit-mid" flex="1"/>
        <xul:spring class="urlbar-rit-btm"/>
      </xul:box>
    </content>
  </binding>

</bindings>
