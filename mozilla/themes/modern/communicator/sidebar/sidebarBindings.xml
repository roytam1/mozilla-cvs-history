<?xml version="1.0"?>

<bindings id="sidebarSplitterBindings.xml"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="sidebar-tab" extends="xul:button">
    <content>
      <xul:vbox class="sidebar-tab-left">
        <xul:spring class="sidebar-tab-left-top" inherits="selected,first-panel-after-selected,top-panel,last-panel"/>
        <xul:spring class="sidebar-tab-left-mid" inherits="selected,first-panel-after-selected,top-panel,last-panel"
                    flex="1"/>
        <xul:spring class="sidebar-tab-left-btm" inherits="selected,first-panel-after-selected,top-panel,last-panel"/>
      </xul:vbox>
  
      <xul:stack class="sidebar-tab-mid-1">
        <xul:vbox class="sidebar-tab-mid-2">
          <xul:spring class="sidebar-tab-mid-top" inherits="selected,first-panel-after-selected,top-panel,last-panel"
                      flex="1"/>
          <xul:spring class="sidebar-tab-mid-btm" inherits="selected,first-panel-after-selected,top-panel,last-panel"/>
        </xul:vbox>
      
        <xul:box class="sidebar-tab-text-box">
          <xul:text class="sidebar-tab-text" inherits="value=label" crop="right"/>
        </xul:box>
      </xul:stack>
      
      <xul:vbox class="sidebar-tab-right">
        <xul:spring class="sidebar-tab-right-top" inherits="selected,first-panel-after-selected,top-panel,last-panel"/>
        <xul:spring class="sidebar-tab-right-mid" inherits="selected,first-panel-after-selected,top-panel,last-panel"
                    flex="1"/>
        <xul:spring class="sidebar-tab-right-btm" inherits="selected,first-panel-after-selected,top-panel,last-panel"/>
      </xul:vbox>
            
      <xul:spring class="sidebar-tab-rightcap" flex="1"/>
    </content>
  </binding>

  <binding id="sidebarheader">
    <content>
      <xul:box class="sidebarheader-internal-box" flex="1" autostretch="never">
        <xul:text class="sidebar-header-text" inherits="value=label,crop" crop="right" flex="1"/>
        <xul:box>
          <children/>
        </xul:box>
      </xul:box>
    </content>
  </binding>
    
</bindings>
