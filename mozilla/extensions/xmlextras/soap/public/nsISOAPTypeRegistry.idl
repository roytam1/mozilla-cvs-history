#include "nsISupports.idl"

interface nsIDOMElement;
interface nsIDOMNode;
interface nsISOAPType;
interface nsISOAPMessage;
interface nsISOAPParameter;

/**
 * This interface keeps track of all the known types and how
 *   each should be marshalled (by type) or unmarshalled (by 
 *   schema)
 */

[scriptable, uuid(9ae49600-1dd1-11b2-877f-e62f620c5e92)]
interface nsISOAPTypeRegistry : nsISupports {
  /**
   * Process a configuration and add the resulting types
   *
   * @param aConfiguration Root element of configuration XML.
   *
   * @return boolean True if types were added, false if an error occurred
   */
  boolean addConfiguration(in nsIDOMElement aConfiguration);

  /**
   * Add a type to this registry so it can be serialized / deserialized
   *
   * @param aType The type to be added.
   *
   * @return True if type was added, false if type could not be added
   */
  void addType(in nsISOAPType aType);

  /**
   * Given an unmarshalled type, find the type information.
   *
   * @param aEncodingStyleURI The URI that matches the encoding style of 
   *   the type to be located.
   *
   * @param aTypeID The  parameter or object type to be located.
   *
   * @return The type in the registry that matches the encoding and type name
   */
  nsISOAPType queryByTypeID(
        in AString aEncodingStyleURI, in AString aTypeID);
  
  /**
   * Given a schema type, find the type information.
   *
   * @param encodingStyleURI The URI that matches the encoding style of 
   *   the type to be located.
   *
   * @param aSchemaID the namespace URI of the element.
   *
   * @return The type in the registry that matches the encoding and element
   */
  nsISOAPType queryBySchemaID(
        in AString aEncodingStyleURI, in AString aSchemaID);


  /**
   * Marshall the source object into the specified
   * parent in the output.  Any parameter may be null
   * as long as the marshaller is OK with it.
   *
   * @param aMessage The message receiving the marshalled content
   *
   * @param aSource The parameter or object to be marshalled
   *
   * @param aEncodingStyleURI The encoding style
   *
   * @param aTypeID The type ID of the source parameter or object
   *
   * @param aDOMScope The element scope, if any, where the result 
   *   will live, so that namespace prefixes, and other context
   *   such as xml:base, xml:lang, etc. can be assumed instead of
   *   having to locally declare everything.  If this is null, then
   *   everything must be locally declared.
   *
   * @return The marshalled DOM node or data, which may be null if the 
   *   operation failed, did not return a result, or inserted the
   *   result itself into the destination.  In case of failure, 
   *   a more complete status is recorded in the message.
   */
  void marshall(
      in nsISOAPMessage aMessage, in nsISOAPParameter aSource, 
      in AString aEncodingStyleURI, in AString aTypeID,
      in nsIDOMNode aDestination);

  /**
   * Unmarshall the source node into the specified
   * object in the output.  Any argument may be null as
   * long as the unmarshaller is OK with it.
   *
   * @param aMessage The message supplying the marshalled content
   *
   * @param aSource The DOM node or data to be unmarshalled
   *
   * @param aEncodingStyleURI The encoding style
   *
   * @param aSchemaID The schema ID of the source DOM node or data
   *
   * @return The unmarshalled parameter or object, which is null if the
   *   operation failed or did not return a result.  In case of failure, 
   *   a more complete status is recorded in the message.
   */
  nsISOAPParameter unmarshall(
      in nsISOAPMessage aMessage, in nsIDOMNode aSource, 
      in AString aEncodingStyleURI, in AString aSchemaID);
  };

