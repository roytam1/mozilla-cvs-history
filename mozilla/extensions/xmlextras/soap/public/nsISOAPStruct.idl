#include "nsISupports.idl"
#include "nsIEnumerator.idl"
#include "nsISOAPParameter.idl"

/**
 * This interface permits exposing XPCOM objects
 *   as SOAP structures.
 */

[scriptable, uuid(18417b16-1dd2-11b2-8576-97aa4cf2f901)]
interface nsISOAPStruct : nsISupports {

  /**
   * Enumeration of parameter objects which
   * represent the values of a SOAP struct.
   * These values are temporary, and must only
   * be used to get the values of members,
   * but never to set the values of members.
   */
  readonly attribute nsISimpleEnumerator members;

  /**
   * Get the value of a nsISOAPStruct member
   * @param member parameter structure used to set the member
   */
  nsISOAPParameter getMember(in AString name);

  /**
   * Set the value of a nsISOAPStruct member
   * @param member parameter structure used to set the member
   */
  void setMember(in nsISOAPParameter member);
};

