#include "nsISupports.idl"
#include "nsISOAPMarshaller.idl"
#include "nsISOAPUnmarshaller.idl"

/**
 * This interface keeps all the info about a type mapping: the encoding style,
 * the XML element type, the marshalling type and the constructor that is
 * supposed to create the type for unmarshalling.
 */
[scriptable, uuid(2c1c105c-1dd2-11b2-8b8a-f5137f365679)]
interface nsISOAPType : nsISupports {

/**
 * Encoding style
 */
  attribute DOMString encodingStyleURI;

/**
 * ID of type of parameter or object
 */
  attribute DOMString typeID;

/**
 * ID of schema of marshalled DOM node or data
 */
  attribute DOMString schemaID;

/**
 * Service which can marshal this parameter or object
 */
  attribute nsISOAPMarshaller marshaller;

/**
 * Service which can unmarshal this DOM node or data
 */
  attribute nsISOAPUnmarshaller unmarshaller;

/**
 * Configuration object that may contain more info on the marshalling
 */
  attribute nsISupports marshallConfiguration;

/**
 * Configuration object that may contain more info on the unmarshalling
 */
  attribute nsISupports unmarshallConfiguration;

};
