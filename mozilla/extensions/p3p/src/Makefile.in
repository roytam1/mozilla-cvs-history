EXPORT_LIBRARY = 1
IS_COMPONENT = 1
MODULE_NAME	= nsP3PModule

REQUIRES	= xpcom \
		  string \
		  docshell \
		  necko \
		  dom \
		  gfx \
		  layout \
		  content \
		  rdf \
		  widget \
		  xmlextras \
		  cookie \
		  pref \
		  intl \
