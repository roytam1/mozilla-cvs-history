MODULE = psmglue

DEPTH=..\..\..
IGNORE_MANIFEST=1

!ifdef MOZ_STATIC_COMPONENT_LIBS
LIBRARY_NAME  = psmglue
PDBFILE       = $(LIBRARY_NAME).pdb
MAPFILE       = $(LIBRARY_NAME).map
LIB           = .\$(OBJDIR)\$(LIBRARY_NAME).lib
MAKE_OBJ_TYPE = LIB
!else
DLLNAME       = psmglue
PDBFILE       = $(DLLNAME).pdb
MAPFILE       = $(DLLNAME).map
DLL           = .\$(OBJDIR)\$(DLLNAME).dll
MAKE_OBJ_TYPE = DLL
!endif

include <$(DEPTH)/config/config.mak>

LINCS = $(LINCS)     \
    -I$(PUBLIC)      \
    -I$(XPDIST)/public/security \
    $(NULL)

LLIBS   = \
    $(LIBNSPR) \
    $(DIST)\lib\xpcom.lib \
    $(DIST)\lib\js3250.lib \
    $(DIST)\lib\cmt.lib       \
    $(DIST)\lib\protocol.lib  \
    $(DIST)\lib\mozreg.lib       \
    $(DIST)\lib\jsdom.lib \
    $(NULL)

EXPORTS = \
    .\nsPSMShimLayer.h \
    $(NULL)

OBJS = \
    .\$(OBJDIR)\nsPSMMutex.obj \
    .\$(OBJDIR)\nsPSMShimLayer.obj \
    .\$(OBJDIR)\nsPSMComponent.obj \
    .\$(OBJDIR)\nsPSMUICallbacks.obj \
    .\$(OBJDIR)\nsPSMModule.obj \
    .\$(OBJDIR)\nsSecureBrowserUIImpl.obj \
    .\$(OBJDIR)\nsSSLIOLayer.obj \
    .\$(OBJDIR)\nsSSLSocketProvider.obj \
    .\$(OBJDIR)\nsTLSSocketProvider.obj \
    .\$(OBJDIR)\nsSDR.obj \
    .\$(OBJDIR)\nsFSDR.obj \
    .\$(OBJDIR)\nsCrypto.obj \
    .\$(OBJDIR)\nsKeygenHandler.obj \
    $(NULL)

include <$(DEPTH)\config\rules.mak>

!ifdef MOZ_STATIC_COMPONENT_LIBS
install:: $(LIB)
    $(MAKE_INSTALL) .\$(OBJDIR)\$(LIBRARY_NAME).lib $(DIST)\bin\components
!else
install:: $(DLL)
    $(MAKE_INSTALL) .\$(OBJDIR)\$(DLLNAME).dll $(DIST)\bin\components
!endif