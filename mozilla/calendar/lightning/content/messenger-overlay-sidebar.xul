                   command="calendar_task_filter_command"
                   mode="task"
                   label="&calendar.task.filter.next7days.label;"
                   accesskey="&calendar.task.filter.next7days.accesskey;"/>
         <menuitem id="tasks-view-filter-notstartedtasks"
                   name="filtergroup"
                   value="notstarted"
