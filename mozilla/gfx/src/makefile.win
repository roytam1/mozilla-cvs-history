DEPTH=..\..

DIRS = windows

MODULE=gfx
REQUIRES	= xpcom string widget util dom locale view necko pref timer uriloader gfx2 imglib2 intl mimetype content layout
include <$(DEPTH)\config\config.mak>

LIBRARY_NAME=gkgfx
EXPORT_LIBRARY=1

#RESFILE = $(DLLNAME).res

DEFINES=-D_IMPL_NS_GFX -DWIN32_LEAN_AND_MEAN

CPPSRCS=nsColor.cpp nsColorNames.cpp nsFont.cpp nsFontList.cpp \
    nsRect.cpp nsTransform2D.cpp nsBlender.cpp \
	nsDeviceContext.cpp nsScriptableRegion.cpp nsPrintOptionsImpl.cpp

CPP_OBJS=.\$(OBJDIR)\nsColor.obj .\$(OBJDIR)\nsColorNames.obj \
    .\$(OBJDIR)\nsFont.obj .\$(OBJDIR)\nsFontList.obj \
    .\$(OBJDIR)\nsRect.obj .\$(OBJDIR)\nsTransform2D.obj \
    .\$(OBJDIR)\nsDeviceContext.obj \
	.\$(OBJDIR)\nsBlender.obj \
  .\$(OBJDIR)\nsRenderingContextImpl.obj\
	.\$(OBJDIR)\nsScriptableRegion.obj\
  .\$(OBJDIR)\nsPrintOptionsImpl.obj

LINCS=-I$(PUBLIC)\util \
    -I$(PUBLIC)\xpcom -I$(PUBLIC)\raptor \
!ifdef NECKO
    -I$(PUBLIC)\necko \
!else
    -I$(PUBLIC)\netlib \
!endif
	$(NULL)

LCFLAGS = \
        $(LCFLAGS) \
        $(DEFINES) \
        $(NULL)

LLIBS=				                \
        $(DIST)\lib\util.lib                    \
        $(DIST)\lib\xpcom.lib	                \
        $(LIBNSPR)  

include <$(DEPTH)\config\rules.mak>

install::
	$(MAKE_INSTALL) icon_0.gif $(DIST)\bin\res\gfx
	$(MAKE_INSTALL) icon_1.gif $(DIST)\bin\res\gfx

clobber::
        rm -f $(DIST)\lib\library
	rm -f $(DIST)\bin\res\gfx\icon_0.gif
	rm -f $(DIST)\bin\res\gfx\icon_1.gif
