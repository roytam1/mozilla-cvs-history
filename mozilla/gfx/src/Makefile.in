DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= raptor
LIBRARY_NAME	= raptorgfx

REQUIRES	= util img xpcom raptor netlib dom js

DIRS		= ps

# Build xlibrgb only for X toolkits
ifneq (,$(filter gtk motif qt xlib,$(MOZ_WIDGET_TOOLKIT)))
DIRS		+= xlibrgb
endif

ifdef MOZ_MONOLITHIC_TOOLKIT
DIRS		+= $(MOZ_GFX_TOOLKIT)
else

ifdef MOZ_ENABLE_GTK
DIRS		+= gtk
endif
ifdef MOZ_ENABLE_MOTIF
DIRS		+= motif
endif
ifdef MOZ_ENABLE_QT
DIRS		+= qt
endif
ifdef MOZ_ENABLE_XLIB
DIRS		+= xlib
endif

endif

CPPSRCS		= \
		nsBlender.cpp \
		nsColor.cpp \
		nsColorNames.cpp \
		nsDeviceContext.cpp \
		nsFont.cpp \
		nsImageGroup.cpp \
		nsImageManager.cpp \
		nsImageNetContextAsync.cpp \
		nsImageNetContextSync.cpp \
		nsImageRenderer.cpp \
		nsImageRequest.cpp \
		nsImageSystemServices.cpp \
		nsImageURL.cpp \
		nsRect.cpp \
		nsTransform2D.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/lib \
		-limg_s \
		-lneckoutil_s \
		-lmozutil_s \
		$(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_GFX

