DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

PROGRAM		= TestOutput$(BIN_SUFFIX)

CPPSRCS		= \
		Convert.cpp \
		nsSetupRegistry.cpp \
		$(NULL)

LIBS		= \
		-L$(DIST)/bin/components -lhtmlpars \		
		$(XPCOM_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

TEST_FILES      = \
		plain.html \
		plainwrap.out \
		plainnowrap.out \
		simple.html \
		simplecopy.out \
		simplefmt.out \
		entityxif.xif \
		entityxif.out \
		mailquote.html \
		mailquote.out \
		htmltable.html \
		htmltable.out \
		xifstuff.xif \
		xifstuff.out \
		doctype.xif \
		xifdtplain.out \
		xifdthtml.out \
		simplemail.html \
		simplemail.out \
		$(NULL)

include $(topsrcdir)/config/rules.mk

install:: 
	$(INSTALL) -m 555 $(srcdir)/TestOutSinks.pl $(DIST)/bin
	$(INSTALL) $(addprefix $(srcdir)/, $(TEST_FILES)) $(DIST)/bin/OutTestData

