		public/nsStringFragment.h		\
		public/nsStringFwd.h			\
		public/nsStringIterator.h		\
		public/nsStringIteratorUtils.h		\
		public/nsStringTraits.h			\
		public/nsXPIDLString.h			\
		obsolete/nsStr.h			\
		obsolete/nsStrShared.h           	\
		obsolete/nsString.h			\
		obsolete/nsString2.h			\
