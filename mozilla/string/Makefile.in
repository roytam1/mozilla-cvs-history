include $(DEPTH)/config/autoconf.mk

MODULE		= string
LIBRARY_NAME	= string_s
REQUIRES	= xpcom

PWD		= $(shell pwd)

CPPSRCS		=				\
		src/nsASingleFragmentString.cpp	\
		src/nsAString.cpp			\
		src/nsDependentConcatenation.cpp	\
		src/nsDependentSubstring.cpp	\
		src/nsFragmentedString.cpp		\
		src/nsPrintfCString.cpp		\
		src/nsPromiseFlatString.cpp		\
		src/nsReadableUtils.cpp		\
		src/nsSharableString.cpp		\
		src/nsSharedBufferList.cpp		\
		src/nsSlidingString.cpp		\
		src/nsXPIDLString.cpp		\
		obsolete/nsStr.cpp		\
		obsolete/nsString.cpp		\
		obsolete/nsString2.cpp		\
		$(NULL)

EXPORTS		=				\
		public/nsAFlatString.h			\
		public/nsAlgorithm.h			\
		public/nsASingleFragmentString.h	\
		public/nsAString.h			\
		public/nsAStringGenerator.h		\
		public/nsBufferHandle.h			\
		public/nsBufferHandleUtils.h		\
		public/nsCharTraits.h			\
