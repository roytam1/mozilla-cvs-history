 * constructed from an nsIStreamIO object and a URL.
 */
[scriptable, uuid(308362ce-0d06-11d4-986e-00c04fa0cf4a)]
interface nsIStreamIOChannel : nsIChannel
{
    void init(in nsIURI uri, in nsIStreamIO io);
};

