DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= necko
LIBRARY_NAME	= necko
IS_COMPONENT	= 1

CPPSRCS		= nsNetModule.cpp

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libneckobase_s.a \
		$(DIST)/lib/libneckodns_s.a \
		$(DIST)/lib/libneckosocket_s.a \
		$(NULL)

LOCAL_INCLUDES	= \
		-I$(srcdir)/../base/src \
		-I$(srcdir)/../dns/src \
		-I$(srcdir)/../socket/base \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MKSHLIB_FORCE_ALL) \
		$(SHARED_LIBRARY_LIBS) \
		$(MKSHLIB_UNFORCE_ALL) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

$(LIBRARY) $(SHARED_LIBRARY): $(SHARED_LIBRARY_LIBS) Makefile

