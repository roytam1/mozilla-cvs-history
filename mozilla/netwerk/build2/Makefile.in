DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@ \
		@srcdir@/../protocol/ftp/public \
		@srcdir@/../protocol/viewsource/public \
		$(NULL)

include $(DEPTH)/config/autoconf.mk

MODULE		= necko2
LIBRARY_NAME	= necko2
EXPORT_LIBRARY = 1
IS_COMPONENT	= 1
MODULE_NAME	= necko_secondary_protocols
REQUIRES	= xpcom \
		  string \
		  necko \
		  nkcache \
		  pref \
		  exthandler \
		  mimetype \
		  intl \
		  $(NULL)

CPPSRCS		= \
		nsNetModule2.cpp \
		../protocol/ftp/src/nsFtpProtocolHandler.cpp \
		../protocol/ftp/src/nsFTPChannel.cpp \
		../protocol/ftp/src/nsFtpConnectionThread.cpp \
		../protocol/ftp/src/nsFtpControlConnection.cpp \
		../protocol/gopher/src/nsGopherHandler.cpp \
		../protocol/gopher/src/nsGopherChannel.cpp \
		../protocol/viewsource/src/nsViewSourceHandler.cpp \
		../protocol/viewsource/src/nsViewSourceChannel.cpp \
		$(NULL)

EXPORTS_SUB_MODULES = necko_ftp

necko_ftp_EXPORTS = $(srcdir)/../protocol/ftp/public/ftpCore.h

XPIDLSRCS_SUB_MODULES = necko_ftp necko_viewsource

necko_ftp_XPIDLSRCS = nsIFTPChannel.idl

necko_viewsource_XPIDLSRCS = nsIViewSourceChannel.idl

LOCAL_INCLUDES	= \
		-I$(srcdir)/../protocol/gopher/src \
		-I$(srcdir)/../protocol/ftp/src \
		-I$(srcdir)/../protocol/viewsource/src \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

# Use -g for Irix mipspro builds as workaround for bug 92099
ifneq (,$(filter IRIX IRIX64,$(OS_ARCH)))
ifndef GNU_CC
MODULE_OPTIMIZE_FLAGS=$(if $(findstring protocol/ftp,$@),-O -g,)
endif
endif

ifeq ($(OS_ARCH),WINNT)
ifndef MOZ_DEBUG
ifndef NO_LOGGING
DEFINES		:= $(if $(findstring protocol/ftp,$@),$(DEFINES) -DFORCE_PR_LOG),$(DEFINES))
endif
endif
endif # WINNT

include $(topsrcdir)/config/rules.mk

