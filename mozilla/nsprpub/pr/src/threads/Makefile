#! gmake

MOD_DEPTH = ../../..

include $(MOD_DEPTH)/config/config.mk

ifdef USE_PTHREADS
    DIRS =
else
ifdef USE_BTHREADS
    DIRS =
else
    DIRS = combined
endif
endif

# Disable optimization of the nspr on SunOS4.1.3
ifeq ($(OS_ARCH),SunOS)
ifeq ($(OS_RELEASE),4.1.3_U1)
OPTIMIZER =
endif
endif

ifdef USE_PTHREADS
CSRCS = \
	prcmon.c \
	prrwlock.c   \
	prtpd.c \
	$(NULL)
else
ifdef USE_BTHREADS
CSRCS = \
	prcmon.c \
	prrwlock.c   \
	prtpd.c \
	$(NULL)
else
CSRCS =	\
	prcmon.c  \
	prdump.c  \
	prmon.c   \
	prsem.c   \
	prrwlock.c   \
	prcthr.c \
	prtpd.c \
	$(NULL)
endif
endif

TARGETS	= $(OBJS)

INCLUDES = -I$(includedir) -I$(MOD_DEPTH)/pr/include -I$(MOD_DEPTH)/pr/include/private

DEFINES     += -D_NSPR_BUILD_

include $(MOD_DEPTH)/config/rules.mk

export:: $(TARGETS)

