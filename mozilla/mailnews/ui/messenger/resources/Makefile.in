DEPTH = ../../../..
topsrcdir	= @top_srcdir@
VPATH		= @srcdir@
srcdir		= @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/config.mk

include $(topsrcdir)/config/rules.mk

SAMPLES_DIR = $(DIST)/bin/res/mailnews/messenger

EXPORT_RESOURCE_SAMPLES = \
	$(srcdir)/mailshell.xul \
	$(srcdir)/msgbar.xul \
	$(srcdir)/folderPane.xul \
	$(srcdir)/folderPane.css \
	$(srcdir)/threadPane.xul \
	$(srcdir)/threadPane.css \
	$(srcdir)/message.html \
	$(srcdir)/widgetglue.js \
	$(srcdir)/commandglue.js \
	$(srcdir)/shareglue.js \
	$(srcdir)/3panemail.html \
	$(srcdir)/messagePane.xul \
	$(srcdir)/closedMailFolder.gif \
	$(srcdir)/openMailFolder.gif \
	$(srcdir)/localMailHost.gif \
	$(srcdir)/mailMessage.gif \
	$(srcdir)/closedInbox.gif \
	$(srcdir)/closedTrash.gif \
	$(srcdir)/closedOutbox.gif \
	$(srcdir)/getmsg.gif \
	$(srcdir)/newmsg.gif \
	$(srcdir)/reply.gif \
	$(srcdir)/forward.gif \
	$(srcdir)/trash.gif \
	$(NULL)

EXPORT_RESOURCE_SAMPLES_TO_REMOVE := $(addprefix $(SAMPLES_DIR)/, $(EXPORT_RESOURCE_SAMPLES))

install::
	$(INSTALL) $(EXPORT_RESOURCE_SAMPLES) $(SAMPLES_DIR)

clobber::
	$(RM) $(EXPORT_RESOURCE_SAMPLES_TO_REMOVE)
