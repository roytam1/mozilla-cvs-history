DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= mozMapi32
EXPORT_LIBRARY	= $(MODULE)
LIBRARY_NAME	= $(MODULE)
DEFFILE		= $(srcdir)/Mapi32.def

REQUIRES	= MapiProxy \
		  msgMapi \
		  xpcom \
		  string \
		  $(NULL)

CPPSRCS		= MapiDll.cpp

OS_LIBS		+= ole32.lib

# Force use of PIC
FORCE_USE_PIC	= 1 
FORCE_SHARED_LIB = 1

include $(topsrcdir)/config/rules.mk

DEFINES	+= -DUNICODE -D_UNICODE
