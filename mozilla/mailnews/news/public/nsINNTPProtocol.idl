#include "nsISupports.idl"

%{ C++
#include "nsIStreamListener.h"
#include "nsIURL.h"
%}

interface nsIStreamListener;
interface nsIURL;

[scriptable, uuid(1940d682-1865-11d3-9deb-004005263078)]
interface nsINNTPProtocol : nsIStreamListener {
{
	// initialization function given a new url and transport layer
    void Initialize(in nsIURL aURL, in nsITransport transportLayer);
          
	// aConsumer is typically a display stream you may want the results to be displayed into...
    void LoadUrl(in nsIURL aURL, in nsISupports aConsumer);
    
    // returns true if we are currently running a url and false otherwise...
    boolean IsRunningUrl();
};

