DEPTH=..\..\..\..
IGNORE_MANIFEST=1

include <$(DEPTH)\config\config.mak>

LIBRARY_NAME=msgsearch_s
MODULE=msgsearch

DEFINES=-D_IMPL_NS_HTML

CPPSRCS=    nsMsgFilterService.cpp\
			nsMsgFilterList.cpp\
			nsMsgFilter.cpp\
			nsMsgSearchTerm.cpp\
			nsMsgBodyHandler.cpp\
			nsMsgLocalSearch.cpp\
			nsMsgSearchAdapter.cpp\
			$(NULL)

CPP_OBJS=   .\$(OBJDIR)\nsMsgFilterService.obj  \
			.\$(OBJDIR)\nsMsgFilterList.obj\
			.\$(OBJDIR)\nsMsgFilter.obj\
			.\$(OBJDIR)\nsMsgSearchTerm.obj\
			.\$(OBJDIR)\nsMsgBodyHandler.obj\
			.\$(OBJDIR)\nsMsgLocalSearch.obj\
			.\$(OBJDIR)\nsMsgSearchAdapter.obj\
			$(NULL)


EXPORTS=	nsMsgFilterService.h\
			$(NULL)


LINCS=-I$(PUBLIC)\xpcom \
	 -I$(PUBLIC)\mailnews \
	 -I$(PUBLIC)\raptor \
	 -I$(PUBLIC)\mime \
	 -I$(PUBLIC)\locale \
	 -I$(PUBLIC)\pref \
	 -I$(PUBLIC)\js \
	 -I$(PUBLIC)\netlib 


LCFLAGS = \
        $(LCFLAGS) \
        $(DEFINES) \
        $(NULL)

include <$(DEPTH)\config\rules.mak>

libs:: $(LIBRARY)
	$(MAKE_INSTALL) $(LIBRARY) $(DIST)\lib

clobber::
	rm -f $(DIST)\lib\$(LIBRARY_NAME).lib
