<?xml version="1.0"?>
<?xml-stylesheet href="chrome://messenger/skin/messenger.css" type="text/css"?>
<?xml-stylesheet href="chrome://communicator/skin/pref/pref.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://messenger/locale/am-main.dtd" >

<window xmlns:html="http://www.w3.org/TR/REC-html40"
     xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
     flex="100%"
     class="dialog"
     onload="parent.onPanelLoaded('am-main.xul');"
     align="vertical">

    <script src="chrome://global/content/strres.js"/>
    <script src="chrome://communicator/content/pref/prefutilities.js"/>
    <box class="header" align="horizontal">  
      <text class="left-header-text" value="&accountTitle.label;"/>
      <spring class="header-spring" flex="1"/>
      <text class="right-header-text" value=""/>
    </box>

	    <html class="secDesc">&accountSettingsDesc.label;</html>
	    <html>&accountNameDesc.label;</html>
        <grid width="100%">
          <columns>
            <column flex="1"/>
            <column flex="2"/>
          </columns>
          <rows>
            <row>
              <text class="label" value="&accountName.label;"/>
              <html:input type="text" size="30" name="server.prettyName" id="server.prettyName" flex="100%"/>
            </row>
          </rows>
        </grid>
    <spring class="spacer"/>
    <html class="secTitle">&identityTitle.label;</html>
    <spring class="spacer"/>
    <html class="secDesc">&identityDesc.label;</html>
    <grid width="100%">
    <columns>
      <column flex="1"/>
      <column flex="2"/>
    </columns>
    <rows>
      <row>
        <text class="label" value="&name.label;"/>
        <html:input name="identity.fullName" type="text" size="30"/>
      </row>
      <row>
        <text class="label" value="&email.label;"/>
        <html:input name="identity.email" type="text" maxwidth="200" size="30"/>
      </row>
      <row>
        <text class="label" value="&replyTo.label;"/>
        <html:input name="identity.replyTo" type="text" maxwidth="200" size="30"/>
      </row>
      <row>
        <text class="label" value="&organization.label;"/>
        <html:input name="identity.organization" type="text" size="30"/>
      </row>
    </rows>
    </grid>
<!-- no vcard in PR1
    <row class="checkboxrow">
      <html:td colspan="2">
        <html:input name="identity.attachVCard" type="checkbox"/>
        &attachVCard.label;
      <button value="&editVCard.label;"/>
      </html:td>
      </row>    
-->
      <box orient="horizontal">
        <html:input name="identity.attachSignature" id="identity.attachSignature" type="checkbox"/>
        <html:label for="identity.attachSignature">&signature.label;</html:label>
        <html:input type="text" id="identity.signature" datatype="nsIFileSpec" flex="100%" name="identity.signature"/>
        <button class="dialog push" name="browse" type="button" value="&choose.label;" onclick="prefNavSelectFile('identity.signature', 'choosefile', true)"/>
      </box>

<!--
      <html:select flex="100%">
         <html:option value="sig1">&sampleSig1.label;</html:option>
         <html:option value="sig2">&sampleSig2.label;</html:option>
         <html:option value="sig3">&sampleSig3.label;</html:option>
      </html:select>
      <button value="&edit.label;"/>

-->

    <box>
        <html:input name="identity.composeHtml" id="identity.composeHtml" type="checkbox"/>
        <html:label for="identity.composeHtml">&useHtml.label;</html:label>
    </box>

    <box orient="horizontal">
      <spring flex="100%"/>
      <button onclick="onAdvanced" value="&advancedButton.label;"/>
      <html:input type="hidden" name="identity.smtpServerKey"/>
    </box>
</window>
