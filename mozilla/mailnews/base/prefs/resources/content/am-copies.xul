<?xml version="1.0"?>
<?xml-stylesheet href="chrome://messenger/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://pref/skin/" type="text/css"?>

<?xul-overlay href="chrome://messenger/content/msgFolderPickerOverlay.xul"?>

<!DOCTYPE window SYSTEM "chrome://messenger/locale/am-copies.dtd" >
<window xmlns:html="http://www.w3.org/TR/REC-html40"
      xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
      class="dialog"
      align="vertical">

<html:script language="JavaScript" src="chrome://global/content/strres.js"/>
<html:script language="JavaScript" src="chrome://messenger/content/widgetglue.js"/>
<html:script src="chrome://messenger/content/am-copies.js"/>

<html:input type="hidden" name="identity.fccFolder" id="identity.fccFolder"/>
<html:input type="hidden" name="identity.draftFolder" id="identity.draftFolder"/>
<html:input type="hidden" name="identity.stationeryFolder" id="identity.stationeryFolder"/>
<html:input type="hidden" name="identity.email" id="identity.email"/>

    <box class="header" align="horizontal">  
    <titledbutton class="left-header-text" value="&copyAndFolderTitle.label;"/>
      <spring class="header-spring" flex="1"/>
      <titledbutton class="right-header-text" value=""/>
    </box>
<box align="vertical">
<html:div>&sendingPrefix.label;</html:div>

  <html:div>
    <html:input name="identity.doFcc" id="identity.doFcc" type="checkbox"/>
    <html:label for="identity.doFcc">&fccMailFolder.label;</html:label>

	<!-- name="identity.fccFolder" -->
	<box align="horizontal" style="display:inline">
		<menu id="msgFccFolderPicker"/>
		<spring flex="100%"/>
	</box>
  </html:div>
  <html:div>
    <html:input name="identity.bccSelf" id="identity.bccSelf" type="checkbox"/>
    <html:label for="identity.bccSelf">&bccAccount.label; <html:div style="display:inline" before=" &lt;" id="bccemail" after="&gt;"/>
</html:label>
  </html:div>
  <html:div>
    <html:input name="identity.bccOthers" id="identity.bccOthers" type="checkbox"/>
    <html:label for="identity.bccOthers">&bccAddress.label;</html:label>
    <html:input type="text" name="identity.bccList"/>
  </html:div>
</box>
<spring class="spacer"/>
<spring class="spacer"/>
<html:div><html:b>&specialFolderTitle.label;</html:b></html:div>
<box align="vertical" flex="100%">
  <box align="horizontal">
    <html:div flex="34%">&draftMailFolder.label;</html:div>
    <!-- name="identity.draftFolder" -->
    <box align="horizontal">
        <menu id="msgDraftsFolderPicker"/>
        <spring flex="100%"/>
    </box>
  </box>
  <box align="horizontal">
    <html:div flex="34%">&templateMailFolder.label;</html:div>
    <!-- name="identity.stationeryFolder " -->
    <box align="horizontal">
      <menu id="msgStationeryFolderPicker"/>
      <spring flex="100%"/>
    </box>
  </box>
</box>

</window>
