<?xml-stylesheet href="chrome://messenger/skin/" type="text/css"?>
<?xul-overlay href="chrome://messenger/content/aw-overlay.xul"?>

<!DOCTYPE window SYSTEM "chrome://messenger/locale/aw-server.dtd" >
<window id="serverpage" xmlns:html="http://www.w3.org/TR/REC-html40"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    align="vertical"
    class="dialog"
    onload="parent.wizardManager.onPageLoad('server');">

<html:script language="JavaScript" src="chrome://global/content/strres.js"/>
<html:script language="JavaScript" src="chrome://messenger/content/aw-server.js"/>

  <box id="wizardHeader">
    <titledbutton class="left-header-text" value="&serverTitle.label;"/>
  </box>

  <box align="vertical">
    <html:div class="title">&incomingServerTitle.label;</html:div>
    <spring class="spacer"/>
    <html:div>&incomingServerTypeDesc.label;</html:div>
    <spring class="spacer"/>
    <html:div>
    <html:label for="servertype">
      &incomingServerTypeLabel.label;</html:label>
      <html:select id="servertype" name="servertype">
        <html:option value="pop3">&popType.label;</html:option>
        <html:option value="imap">&imapType.label;</html:option>
      </html:select>
    </html:div>
    <spring class="spacer"/>
    <html:div>&incomingServerNameDesc.label;</html:div>
    <spring class="spacer"/>
    <html:div>
      <html:label for="hostname">&incomingServerLabel.label;</html:label>
      <html:input type="text" id="hostname" name="hostname"/>
    </html:div>
  </box>

  <spring class="spacer"/>
  <spring class="spacer"/>
  <html:div id="noSmtp">
  <box align="vertical">
    <html:div class="title">&smtpServerTitle.label;</html:div>
    <spring class="spacer"/>
    <html:div>&smtpServerDesc.label;</html:div>
    <spring class="spacer"/>
    <html:div>
      <html:label for="smtphostname">&smtpServerLabel.label;</html:label>
      <html:input type="text" id="smtphostname" name="smtphostname"/>
    </html:div>
  </box>
  </html:div>

  <html:div id="haveSmtp">
    <html:p>&currentSmtpBefore.label;<html:span id="smtpStaticText"/>&currentSmtpAfter.label;</html:p>
    <html:p>&haveSmtp1.label;</html:p>
    <html:p>&haveSmtp2.label;</html:p>
  </html:div>
</window>
