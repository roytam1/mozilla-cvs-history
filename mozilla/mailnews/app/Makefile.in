DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DIRS		= profile

PREF_JS_EXPORTS = \
    $(srcdir)/profile/all.js \
    $(srcdir)/profile/mailnews.js \
    $(NULL)

ifeq ($(USE_SHORT_LIBNAME), 1)
PROGRAM = minotaur$(BIN_SUFFIX)
else
PROGRAM = minotaur-bin$(BIN_SUFFIX)
endif

REQUIRES = \
	string \
	xpcom \
	xulapp \
	$(NULL)

CPPSRCS = nsMailApp.cpp

EXTRA_LIBS = \
	$(DIST)/lib/$(LIB_PREFIX)xulapp_s.$(LIB_SUFFIX) \
	$(MOZ_JS_LIBS) \
	$(MOZ_COMPONENT_LIBS) \
	$(TK_LIBS) \
	$(NULL)

ifeq ($(OS_ARCH),WINNT)
OS_LIBS += comctl32.lib comdlg32.lib uuid.lib shell32.lib ole32.lib oleaut32.lib version.lib winspool.lib
RCINCLUDE = splash.rc
RCFLAGS += -DMOZ_MINOTAUR -I$(srcdir)
endif

ifndef MOZ_WINCONSOLE
ifdef MOZ_DEBUG
MOZ_WINCONSOLE = 1
else
MOZ_WINCONSOLE = 0
endif
endif

include $(topsrcdir)/config/rules.mk

$(PROGRAM): $(DIST)/lib/$(LIB_PREFIX)xulapp_s.$(LIB_SUFFIX)

ifneq (,$(filter-out OS2 WINNT,$(OS_ARCH)))
phoenix:: mozilla.in Makefile.in Makefile $(DEPTH)/config/autoconf.mk
	cat $< | sed -e "s|%MOZAPPDIR%|$(mozappdir)|" \
		-e "s|%MREDIR%|$(mredir)|" \
		-e "s|mozilla-bin|$(PROGRAM)|g" > $@
	chmod +x $@

libs:: phoenix
	$(INSTALL) $< $(DIST)/bin

install:: phoenix
	$(SYSINSTALL) $< $(DESTDIR)$(bindir)

GARBAGE += minotaur
GARBAGE += $(addprefix $(DIST)/bin/defaults/pref/, all.js)
GARBAGE += $(addprefix $(DIST)/bin/defaults/pref/, mailnews.js)

endif
