EXTRA_DSO_LIBS	= msgbsutl
else
EXTRA_DSO_LIBS	= msgbaseutil
endif

EXTRA_DSO_LDOPTS = \
	$(EXTRA_DSO_LIBS) \
	$(MOZ_COMPONENT_LIBS) \
	$(NULL)

