DEPTH=..\..\..
IGNORE_MANIFEST=1

include <$(DEPTH)\config\config.mak>

LIBRARY_NAME=msglocal

MODULE= mailnews

REQUIRES=xpcom nspr rdf

DEFINES=-DWIN32_LEAN_AND_MEAN

CPPSRCS=                        \
	nsPop3Protocol.cpp			\
	nsPop3URL.cpp				\
	nsPop3Sink.cpp				\
	nsMailboxUrl.cpp			\
	nsParseMailbox.cpp			\
	nsMailboxProtocol.cpp		\
	nsMailboxService.cpp		\
	nsPop3Service.cpp			\
	nsLocalMailFolder.cpp		\
	nsPop3IncomingServer.cpp	\
	nsLocalMessage.cpp			\
	nsLocalUtils.cpp			\
	$(NULL)

CPP_OBJS=									\
	.\$(OBJDIR)\nsPop3Protocol.obj			\
	.\$(OBJDIR)\nsPop3URL.obj				\
	.\$(OBJDIR)\nsPop3Sink.obj				\
	.\$(OBJDIR)\nsMailboxUrl.obj			\
	.\$(OBJDIR)\nsParseMailbox.obj			\
	.\$(OBJDIR)\nsMailboxProtocol.obj		\
	.\$(OBJDIR)\nsMailboxService.obj		\
	.\$(OBJDIR)\nsPop3Service.obj			\
	.\$(OBJDIR)\nsLocalMailFolder.obj		\
	.\$(OBJDIR)\nsPop3IncomingServer.obj	\
	.\$(OBJDIR)\nsLocalMessage.obj			\
	.\$(OBJDIR)\nsLocalUtils.obj			\
	$(NULL)


EXPORTS=				\
	nsPop3Protocol.h	\
	nsPop3URL.h			\
	nsPop3Sink.h		\
	nsMailboxUrl.h		\
	nsParseMailbox.h	\
	nsMailboxProtocol.h	\
	nsMailboxService.h	\
	nsPop3Service.h		\
	nsPop3IncomingServer.h	\
	nsLocalMessage.h \
	$(NULL)

LCFLAGS = \
        $(LCFLAGS) \
        $(DEFINES) \
        $(NULL)

include <$(DEPTH)\config\rules.mak>

clobber::
	rm -f $(DIST)\lib\$(LIBRARY_NAME).lib

libs:: $(LIBRARY)
	$(MAKE_INSTALL) $(LIBRARY) $(DIST)\lib


