#
# emitterhtml.dll
# =====================
# This is a mime emitter that is responsible for outputting HTML 
# representations of RFC822 messages
#

#//------------------------------------------------------------------------
#//
#// Specify the depth of the current directory relative to the
#// root of NS
#//
#//------------------------------------------------------------------------
DEPTH=..\..\..\..

#//------------------------------------------------------------------------
#//
# New build system where zip dll is build indepenant of java stubs.
#//
#//------------------------------------------------------------------------
MODULE   = xmlemitter
REQUIRES=
#EXPORTS =\
#		.\nsMimeEmitter.h	\
#		$(NULL)


DEFINES= 

#//------------------------------------------------------------------------
#// 
#// Define the files necessary to build the target (ie. OBJS)
#//
#//------------------------------------------------------------------------

OBJS=							\
		.\$(OBJDIR)\nsMimeEmitter.obj		\
		.\$(OBJDIR)\nsEmitterFactory.obj	\
		$(NULL)

#//------------------------------------------------------------------------
#//
#// Define any Public Make Variables here: (ie. PDFFILE, MAPFILE, ...)
#//
#//------------------------------------------------------------------------
DLLNAME=$(MODULE)
MAPFILE=$(MODULE).map
DEFFILE=$(MODULE).def

#//------------------------------------------------------------------------
#//
#// Define any Public Targets here (ie. PROGRAM, LIBRARY, DLL, ...)
#// (these must be defined before the common makefiles are included)
#//
#//------------------------------------------------------------------------
#
DLL=.\$(OBJDIR)\$(DLLNAME).dll

#//------------------------------------------------------------------------
#//
#// Define any local options for the make tools 
#//     (ie. LCFLAGS, LLFLAGS, LLIBS, LINCS)
#//
#//------------------------------------------------------------------------
DEFINES= -NS_DEBUG

MSGLIBS=				\
		$(NULL)

# These are the libraries we need to link with to create the dll
# These are the libraries we need to link with to create the dll
LLIBS=							\
			$(LLIBS)			\
			$(LIBNSPR)			\
			$(DIST)\lib\js32$(VERSION_NUMBER).lib	\
			$(DIST)\lib\netlib.lib	    	\
			$(DIST)\lib\plc3.lib	\
			$(DIST)\lib\xppref32.lib	\
			$(DIST)\lib\mimetype.lib	\
			$(DIST)\lib\xplib.lib       	\
			$(DIST)\lib\xpcom.lib       	\
			$(DIST)\lib\emitterutils.lib    \
			$(NULL)

LINCS=$(LINCS)  -I.                         		\
			   -I$(PUBLIC)\pref		\
			   -I$(PUBLIC)\js		\
			   -I$(PUBLIC)\security		\
			   -I$(PUBLIC)\netlib		\
			   -I$(PUBLIC)\xpcom		\
			   -I$(PUBLIC)\raptor		\
			   -I$(PUBLIC)\mime		\
			   -I$(PUBLIC)\mailnews         \
			   -I$(PUBLIC)\uconv		\
			   -I$(PUBLIC)\netcnvts		\
			   -I$(PUBLIC)\plugin		\
			   $(NULL)

#//------------------------------------------------------------------------
#//
#// Include the common makefile rules
#//
#//------------------------------------------------------------------------
include <$(DEPTH)/config/rules.mak>

install:: $(DLL)
        $(MAKE_INSTALL) .\$(OBJDIR)\$(DLLNAME).dll $(DIST)\bin\components

clobber::
	rm -f $(DIST)\bin\$(DLLNAME).dll
