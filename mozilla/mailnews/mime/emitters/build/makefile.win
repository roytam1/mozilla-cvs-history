#
# emitterhtml.dll
# =====================
# This is a mime emitter that is responsible for outputting HTML 
# representations of RFC822 messages
#

DEPTH=..\..\..\..
MODULE=emitter

################################################################################
## exports

EXPORTS =              			\
			nsMimeEmitterCID.h  \
	        $(NULL)


################################################################################
## library

!ifdef MOZ_STATIC_COMPONENT_LIBS
LIBRARY_NAME = emitter
LIB = .\$(OBJDIR)\$(LIBRARY_NAME).lib
!else
LIBNAME = .\$(OBJDIR)\emitter
DLL = $(LIBNAME).dll
!endif

DEFINES= -NS_DEBUG

OBJS=										\
		.\$(OBJDIR)\nsEmitterFactory.obj	\
		$(NULL)

LLIBS=										\
			$(LLIBS)						\
			$(LIBNSPR)						\
			$(DIST)\lib\xpcom.lib       	\
			$(DIST)\lib\emitterutils_s.lib  \
			$(NULL)

include <$(DEPTH)\config\rules.mak>

!ifdef MOZ_STATIC_COMPONENT_LIBS
install:: $(LIB)
	$(MAKE_INSTALL)  $(LIB) $(DIST)\bin\components
	$(MAKE_INSTALL)  $(LIB) $(DIST)\lib
!else
install:: $(DLL)
	$(MAKE_INSTALL)  $(LIBNAME).$(DLL_SUFFIX) $(DIST)\bin\components
	$(MAKE_INSTALL)  $(LIBNAME).$(LIB_SUFFIX) $(DIST)\lib
!endif
