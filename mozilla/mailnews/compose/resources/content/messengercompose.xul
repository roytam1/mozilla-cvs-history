        <menupopup/>
		<template> 
		<rule nc:CanFileMessages="true" iscontainer="true" isempty="false">
            <menupopup>
              <menuitem value="[current selection]" disabled="true"/>
              <menuseparator/>
              <menu uri="..."  class="folderMenuItem" value="rdf:http://home.netscape.com/NC-rdf#Name"
