		<html:input type="text" id="attachurl" align="bottom" style="min-width:200px; padding-bottom:0px" />
        <spring style="width:10px" />
	</box>
	
    <spring style="height:1em"/>
	<box id="okCancelButtons"/> 
    <spring style="height:0.5em" />
</window>
