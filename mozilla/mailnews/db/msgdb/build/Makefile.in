DEPTH = ../../../..
topsrcdir	= @top_srcdir@
VPATH		= @srcdir@
srcdir		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE=msgdb
LIBRARY_NAME=msgdb
IS_COMPONENT=1

CPPSRCS = \
	nsMsgDBFactory.cpp	\
	$(NULL)

EXPORTS= \
	nsMsgDBCID.h			\
	$(NULL)

SHARED_LIBRARY_LIBS =	\
	$(DIST)/lib/libmailnewsmsgdb_s.a	\
	$(NULL)

EXTRA_DSO_LDOPTS = 	\
	$(MKSHLIB_FORCE_ALL)	\
	$(SHARED_LIBRARY_LIBS)	\
	$(MKSHLIB_UNFORCE_ALL)	\
	$(NSPR_LIBS)			\
	-L$(DIST)/bin			\
	-L$(DIST)/lib			\
	-lxpcom					\
	-lraptorbase			\
	-lxp					\
	-lmsgbaseutil			\
	-lmork					\
	$(NULL)

include $(topsrcdir)/config/rules.mk

$(LIBRARY) $(SHARED_LIBRARY): $(SHARED_LIBRARY_LIBS) Makefile

