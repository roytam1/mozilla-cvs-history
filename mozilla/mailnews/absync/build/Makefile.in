DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= absyncsvc
LIBRARY_NAME	= absyncsvc
IS_COMPONENT	= 1
SHORT_LIBNAME	= absync
REQUIRES	= xpcom mailnews necko docshell uriloader msgbase msgbaseutil intl locale layout widget addrbook dom mork js

ifeq ($(USE_SHORT_LIBNAME),1)
EXTRA_DSO_LIBS	= msgbutil
else
EXTRA_DSO_LIBS	= msgbaseutil
endif

CPPSRCS		= nsAbSyncFactory.cpp
EXPORTS		= nsAbSyncCID.h

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libabsync_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		-L$(DIST)/lib \
		$(XPCOM_LIBS) \
		$(MOZ_JS_LIBS) \
		$(EXTRA_DSO_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

