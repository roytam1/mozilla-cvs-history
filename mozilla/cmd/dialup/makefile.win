DEPTH=..\..

# java/applet produces contents needed in as_html
DIRS=java as_html win 
!include <$(DEPTH)\config\rules.mak>

!ifdef MOZ_DEBUG
BUILD_INSTALL_DIR=$(DEPTH)\..\x86Dbg\
!else
BUILD_INSTALL_DIR=$(DEPTH)\..\x86Rel\
!endif

install::
	$(MAKE_INSTALL)  \
		$(DEPTH)\dist\$(OBJDIR)\lib\np32asw.dll \
		$(BUILD_INSTALL_DIR)\plugins
	$(MAKE_INSTALL) \
		java\npasw.jar \
		$(BUILD_INSTALL_DIR)\plugins
	$(MAKE_INSTALL) \
		as_html\asw.jar \
		$(BUILD_INSTALL_DIR)\asw
!ifdef MOZ_INSTALL_DIR
	echo copying plugin to Communicator folder...
	copy \
		$(DEPTH)\dist\$(OBJDIR)\lib\np32asw.dll \
		$(MOZ_INSTALL_DIR)\Program\Plugins\.
	echo copying plugin .jar to Commuicator folder...
	copy \
		java\npasw.jar \
		$(MOZ_INSTALL_DIR)\Program\Plugins\.
	echo copying plugin .jar to Commuicator folder...
	copy \
		as_html\asw.jar \
		$(MOZ_INSTALL_DIR)\Program\ASW\.
!endif
