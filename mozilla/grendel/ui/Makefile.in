	$(NULL)

TOPDIR          = @top_srcdir@

CLASSPATH_NEW   = ${CLASSPATH}:$(TOPDIR)/..:$(TOPDIR)

JAVAC           = @java_compiler@

JAVA            = @java_run@

RM              = rm -f

OBJS            = $(subst .java,.class,$(SRCS))

.SUFFIXES: .java .class

.java.class:
	$(JAVAC) -classpath $(CLASSPATH_NEW) -J-mx64m -g $*.java

all:: $(OBJS)

clean::
	$(RM) *.class

distclean::
	$(RM) *.class *~ core Makefile

all clean distclean::
	@sd="$(SUBDIRS)" ;              \
	for dir in $$sd; do             \
	  ( cd $$dir ; $(MAKE) $@ );    \
	done


