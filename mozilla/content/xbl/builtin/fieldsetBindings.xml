<?xml version="1.0"?>

<bindings id="fieldsetBindings"
   xmlns="http://www.mozilla.org/xbl"
   xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="fieldset" extends="xul:groupbox">
    <content>
      <xul:vbox class="fieldset-title" align="start">
        <children includes="legend"/>
      </xul:vbox>
      <xul:box flex="1" class="fieldset-body">
        <xul:description flex="1">
          <children/>
        </xul:description>
      </xul:box>
    </content>    
  </binding>
  
  <binding id="legend" extends="xul:box">
    <content>
      <xul:description flex="1">
        <children/>
      </xul:description>
    </content>
  </binding>
  
</bindings>

    