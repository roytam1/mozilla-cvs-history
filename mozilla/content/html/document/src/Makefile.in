DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= content
LIBRARY_NAME	= gkconhtmldoc_s
REQUIRES	= xpcom \
		  string \
		  gfx \
		  layout \
		  widget \
		  dom \
		  necko \
		  htmlparser \
		  locale \
		  view \
		  js \
		  intl \
		  webshell \
		  docshell \
		  caps \
		  util \
		  uconv \
		  pref \
		  uriloader \
		  prefetch \
		  rdf \
		  chardet \
		  nkcache \
		  appcomps \
		  lwbrk \
		  imglib2 \
		  xpconnect \
		  unicharutil \
		  $(NULL)

CPPSRCS		= \
		nsHTMLContentSink.cpp \
		nsHTMLFragmentContentSink.cpp \
		nsHTMLDocument.cpp \
		nsImageDocument.cpp \
		nsMarkupDocument.cpp \
		nsWyciwygChannel.cpp \
		nsWyciwygProtocolHandler.cpp \
		$(NULL)

EXPORTS		= \
		nsIHTMLDocument.h \
		nsIHTMLContentContainer.h \
		$(NULL)

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

INCLUDES	+= \
		-I$(srcdir)/../../base/src \
		-I$(srcdir)/../../../base/src \
		-I$(srcdir)/../../content/src \
		$(NULL)
