else
LIBRARY_NAME	= DebugRobot
endif

ifndef NECKO
LIBS		= \
		-lxp \
		-lnetlib \
		-lftpurl \
		-lfileurl \
		-labouturl \
		-lgophurl \
		-lremoturl \
		-lnetcnvts \
		-lnetwork \
		-lsockstuburl \
		-lmimetype \
		-lnetcache \
		-lhttpurl \
		-lpwcac \
		-lmozjs \
		-limg \
		-lmozutil \
		-lxpcom \
		$(TIMER_LIBS) \
		$(TK_LIBS) \
		$(NULL)

# Needed to resolve __yylex (?)
ifeq ($(OS_ARCH)$(OS_RELEASE),FreeBSD2)
LIBS		+= -lpcap
endif

else
DIRS		= test
endif

include $(topsrcdir)/config/rules.mk
