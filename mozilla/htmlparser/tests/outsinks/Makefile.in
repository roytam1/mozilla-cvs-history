include $(DEPTH)/config/autoconf.mk

PROGRAM		= TestOutput

CPPSRCS		= \
		Convert.cpp \
		nsSetupRegistry.cpp \
		$(NULL)

LIBS		= \
		-lxpcom \
		-lmozjs \
		$(NSPR_LIBS) \
		$(NULL)

TEST_FILES      = \
		plain.html \
		plainwrap.out \
		plainnowrap.out \
		simple.html \
		simplecopy.out \
		entityxif.xif \
		entityxif.out \
		mailquote.html \
		mailquote.out \
		htmltable.html \
		htmltable.out \
		xifstuff.xif \
		xifstuff.out \
		$(NULL)

include $(topsrcdir)/config/rules.mk

install:: 
	$(INSTALL) -m 555 $(PROGRAM) $(DIST)/bin
	$(INSTALL) -m 555 TestOutSinks $(DIST)/bin
	$(INSTALL) $(TEST_FILES) $(DIST)/bin/OutTestData

