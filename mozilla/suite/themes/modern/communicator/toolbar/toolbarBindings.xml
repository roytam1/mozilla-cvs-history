<?xml version="1.0"?>

<bindings id="toolbarBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="toolbar-primary" extends="chrome://global/content/bindings/toolbar.xml#toolbar">
    <content>
      <xul:toolbargrippy inherits="tooltiptext=grippytooltiptext,tooltip=grippytooltip,last-toolbar"
          tbattr="toolbar-grippy" class="toolbar-primary-grippy"/>
      <xul:hbox class="toolbar-holder" flex="1">
        <xul:hbox class="toolbar-primary-icon"/>
        <xul:stack class="toolbar-primary-mid" flex="1">
          <xul:hbox class="toolbar-primary-mid-2" flex="1">
            <xul:vbox class="toolbar-primary-mid-bg" flex="1">
              <xul:spring class="toolbar-primary-mid-top" flex="1"/> 
              <xul:spring class="toolbar-primary-mid-btm"/> 
            </xul:vbox>
            <xul:vbox class="toolbar-primary-right">
              <xul:spring class="toolbar-primary-right-top"/> 
              <xul:spring class="toolbar-primary-right-mid" flex="1"/> 
              <xul:spring class="toolbar-primary-right-btm"/> 
            </xul:vbox>
          </xul:hbox>
          <xul:hbox class="toolbar-primary-mid-fg"
                   inherits="collapsed,last-toolbar,orient=tborient">
            <children/>
          </xul:hbox>
        </xul:stack>
      </xul:hbox>
    </content>
  </binding>

</bindings>
