DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

# This makefile doesn't do anything by default. Use one of the special targets
# below to stage and build packages.

include $(topsrcdir)/config/rules.mk

# override these variables in special situations
STAGE_DIR = $(DEPTH)/stage$(if $*,/$*)
PACKAGE_LIST = $(srcdir)/packages.list
PACKAGE_FLAGS = 
HANDLERS = xptmerge touch optional preprocess
MAPPINGS = dist/bin=bin xpiroot/=

dump-packages:
	cd $(DEPTH);
	$(PERL) -I $(srcdir) $(srcdir)/dump-packages.pl -o $(DEPTH) -l $(PACKAGE_LIST) $(PACKAGE_FLAGS)

# This rule will stage any one package. If you need to stage multiple packages or
# do ^packages (subtraction packages) use the stage-packages rule and set PACKAGES
# on the command line
stage-%:
	$(PERL) -I $(srcdir) $(srcdir)/stage-packages.pl -o $(DEPTH) -l $(PACKAGE_LIST) -s $(STAGE_DIR) $(addprefix -m ,$(MAPPINGS)) $(addprefix -c ,$(HANDLERS)) -p $(topsrcdir)/config/preprocessor.pl $(PACKAGE_FLAGS) $*

ifndef PACKAGES
stage-packages:
	@echo "Please set PACKAGES on the makefile command line or environment."

else #PACKAGES
stage-packages:
	$(PERL) -I $(srcdir) $(srcdir)/stage-packages.pl -o $(DEPTH) -l $(PACKAGE_LIST) -s $(STAGE_DIR) $(addprefix -m ,$(MAPPINGS)) $(apprefix -c ,$(HANDLERS)) -p $(topsrcdir)/config/preprocessor.pl $(PACKAGE_FLAGS) $(PACKAGES)

endif

