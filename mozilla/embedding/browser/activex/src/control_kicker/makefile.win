DLLNAME = mozctlx
QUIET =
DEPTH=..\..\..\..\..

MAKE_OBJ_TYPE = DLL
DLL=.\$(OBJDIR)\$(DLLNAME).dll
DEFFILE = mozctlx.def

OBJS =                                 \
    .\$(OBJDIR)\StdAfx.obj             \
    .\$(OBJDIR)\control_kicker.obj        \
    $(NULL)

LLIBS=                          \
 $(NULL)

WIN_LIBS = \
 comdlg32.lib                   \
 ole32.lib                      \
 oleaut32.lib                   \
 uuid.lib                       \
 shell32.lib                    \
 $(NULL)


LLFLAGS = -SUBSYSTEM:windows /DLL

include <$(DEPTH)\config\rules.mak>
include <$(DEPTH)\config\config.mak>

CFLAGS = /D "WIN32" /GX /GF /MT /O1

# Make sure destination is in path so registration/deregistration
# doesn't fall over.

PATH=$(DIST)\bin;$(PATH)

install:: $(DLL)
!if "$(WINOS)" == "WIN95"
    $(MAKE_INSTALL) $(DLL) $(DIST)\bin
!else
    $(MAKE_INSTALL) $(DLL) $(DIST)\bin
    regsvr32 /s /c $(DIST)\bin\$(DLLNAME).dll
!endif

clobber::
    -regsvr32 /s /c /u $(DIST)\bin\$(DLLNAME).dll

control_kicker.cpp \
StdAfx.cpp: StdAfx.h
