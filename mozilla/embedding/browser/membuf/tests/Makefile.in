DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MOZILLA_INTERNAL_API = 1

REQUIRES    = \
              docshell \
              embed_base \
              gfx \
              membufembed \
              profdirserviceprovider \
              string \
              uriloader \
              view \
              webbrwsr \
              widget \
              xpcom \
              $(NULL)

CPPSRCS     = \
              main.cpp \
              BrowserContainerImpl.cpp \
              $(NULL)

FONTS       = \
              Vera.ttf \
              VeraBI.ttf \
              VeraBd.ttf \
              VeraIt.ttf \
              VeraMoBI.ttf \
              VeraMoBd.ttf \
              VeraMoIt.ttf \
              VeraMono.ttf \
              VeraSe.ttf \
              VeraSeBd.ttf \
              $(NULL)

FONT_TARGETS = $(addprefix $(FINAL_TARGET)/, $(FONTS))

# SIMPLE_PROGRAMS = $(CPPSRCS:.cpp=)

PROGRAM = membufEmbed

LOCAL_INCLUDES = -I/builds/allegro-4.2.0/target/include

#DEFINES += -DMEMBUF_DEBUG

BIN_FLAGS += --export-dynamic
 
LIBS = \
       $(shell allegro-config --shared) \
       $(MOZ_COMPONENT_LIBS) \
       -lmembufembed \
       -lprofdirserviceprovider_s \
       $(NULL)

include $(topsrcdir)/config/config.mk
include $(topsrcdir)/config/rules.mk

# copy the font files over - this needs to change ultimately to either
#   copy just to the objdir (not dist/bin) or better yet Freetype needs
#   to look to the system fonts for it's info and we can remove this.
export:: $(srcdir)/$(FONTS)
	$(INSTALL) $^ $(FINAL_TARGET)

clean::
	rm -f $(FONT_TARGETS)
	rm -f *.tga

#   this copies to this dir in the objdir
#	$(INSTALL) $^ .
#   this copies to dist/bin:
#	$(INSTALL) $^ $(FINAL_TARGET)

