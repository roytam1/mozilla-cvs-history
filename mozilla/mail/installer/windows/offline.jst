var err = initInstall("Offline Support", "Offline", "$Version$"); 
logComment("initInstall: " + err);

// Offline Extension

var fProgram = getFolder("Program");
logComment("fProgram: " + fProgram);

err = addDirectory("", "$Version$", "thunderbird", fProgram, "", true);
logComment("addDirectory: " + err);

var jarFolder = getFolder("Chrome", "offline.jar");

registerChrome(PACKAGE | DELAYED_CHROME, jarFolder, "content/messenger-offline/");
registerChrome(SKIN | DELAYED_CHROME, jarFolder, "skin/classic/inspector/");
registerChrome(LOCALE | DELAYED_CHROME, jarFolder, "locale/en-US/messenger-offline/");

err = getLastError();
if (err==SUCCESS)
    performInstall(); 
else
    cancelInstall(err);
