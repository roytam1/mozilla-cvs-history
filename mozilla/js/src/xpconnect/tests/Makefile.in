DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= xpconnect_tests
LIBRARY_NAME	= xpctest
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
CPP_PROG_LINK	= 1
SIMPLE_PROGRAMS = TestXPC$(BIN_SUFFIX)

REQUIRES	= xpconnect \
		  xpcom \
		  string \
		  js \
		  $(NULL)

LIB_CPPSRCS	= \
		components/xpctest_array.cpp \
		components/xpctest_echo.cpp \
		components/xpctest_child.cpp \
		components/xpctest_noisy.cpp \
		components/xpctest_overloaded.cpp \
		components/xpctest_string.cpp \
		components/xpctest_module.cpp \
		components/xpctest_attributes.cpp \
		components/xpctest_calljs.cpp \
		components/xpctest_const.cpp \
		components/xpctest_in.cpp \
		components/xpctest_inout.cpp \
		components/xpctest_multiple.cpp \
		components/xpctest_out.cpp \
		components/xpctest_domstring.cpp \
		components/xpctest_variant.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

PROG_LIBS	= \
		$(LIBS_DIR) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

XPIDLSRCS	= \
		idl/xpctest.idl \
		idl/xpctest2.idl \
		idl/xpctest_attributes.idl \
		idl/xpctest_calljs.idl \
		idl/xpctest_const.idl \
		idl/xpctest_in.idl \
		idl/xpctest_inout.idl \
		idl/xpctest_multiple.idl \
		idl/xpctest_domstring.idl \
		idl/xpctest_out.idl \
		$(NULL)

include $(topsrcdir)/config/rules.mk

PROG_DEFINES	+= -DJS_THREADSAFE -DJSFILE

$(SIMPLE_PROGRAMS): %$(BIN_SUFFIX): %.$(OBJ_SUFFIX) $(SHARED_LIBRARY) $(LIBRARY)
