mk_add_options MOZ_CO_PROJECT=mail,calendar
mk_add_options MOZ_MAKE_FLAGS="-j6"
mk_add_options JS_READLINE=1

ac_add_options --enable-application=mail
ac_add_options --enable-extensions=default,lightning,inspector,venkman
ac_add_options --disable-static
ac_add_options --enable-shared
ac_add_options --disable-tests
ac_add_options --disable-debug
ac_add_options --with-macos-sdk=/Developer/SDKs/MacOSX10.3.9.sdk
# Use Carbon widgets, regardless of what trunk's default is
ac_add_options --enable-default-toolkit=mac
