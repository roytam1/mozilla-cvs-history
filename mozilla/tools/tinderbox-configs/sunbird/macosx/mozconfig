#
## hostname:
## uname:
#

# hilo is 10.3. It can't make universal binaries yet.
#. $topsrcdir/build/macosx/universal/mozconfig

mk_add_options MOZ_CO_PROJECT="calendar"
mk_add_options MOZ_MAKE_FLAGS="-j6"
mk_add_options MOZ_CO_MODULE="mozilla/tools/update-packaging"
#mk_add_options MOZ_CO_LOCALES=all
#mk_add_options LOCALES_CVSROOT=:ext:cltbld@cvs.mozilla.org:/l10n
mk_add_options JS_READLINE=1
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/../build

ac_add_options --enable-application="calendar"
ac_add_options --enable-update-channel="nightly"
ac_add_options --enable-update-packaging
ac_add_options --disable-debug
ac_add_options --enable-optimize="-O2 -g"
ac_add_options --disable-tests
ac_add_options --disable-installer

ac_add_options --enable-static
ac_add_options --disable-shared
# Change to "ac_add_app_options ppc --enable-prebinding" when making universal
ac_add_options --enable-prebinding

ac_add_options --with-macos-sdk="/Developer/SDKs/MacOSX10.2.8.sdk"

# Use Carbon widgets, regardless of what the default is
ac_add_options --enable-default-toolkit=mac
