#//------------------------------------------------------------------------
#//
#// Makefile to build 
#//
#//------------------------------------------------------------------------


#//------------------------------------------------------------------------
#//
#// Specify the depth of the current directory relative to the
#// root of mozilla
#//
#//------------------------------------------------------------------------

DEPTH= ..\..\..\..


#//------------------------------------------------------------------------
#// 
#// Define the files made public for others to use (i.e. EXPORTS)
#//
#//------------------------------------------------------------------------
EXPORTS= \
    .\a2ww2a.h \
!if "$(OS_TARGET)" == "WINCE"
    .\mozgdi.h \
!endif
    $(NULL)


#//------------------------------------------------------------------------
#// 
#// Define the files necessary to build the target (i.e. OBJS)
#//
#//------------------------------------------------------------------------

OBJS= \
	.\$(OBJDIR)\a2w.obj \
	.\$(OBJDIR)\w2a.obj \
!if "$(OS_TARGET)" == "WINCE"
	.\$(OBJDIR)\apiA2W.obj \
	.\$(OBJDIR)\mozgdi.obj \
!endif
	$(NULL)


#//------------------------------------------------------------------------
#//
#// Define any Public Targets here (i.e. PROGRAM, LIBRARY, DLL, ...)
#// (these must be defined before the common makefiles are included)
#//
#//------------------------------------------------------------------------

THENAME=a2ww2a
MAKE_OBJ_TYPE=DLL
EXP=$(OBJDIR)\$(THENAME).lib
DLL=$(OBJDIR)\$(THENAME).dll
EXCLUDE_LIBS=$(THENAME).lib

#//------------------------------------------------------------------------
#//
#// Define any local options for the make tools 
#//     (i.e. LCFLAGS, LLFLAGS, LLIBS, LINCS)
#//
#//------------------------------------------------------------------------
LCFLAGS=$(LCFLAGS) \
    /DBUILD_$(THENAME) \
    $(NULL)

LLFLAGS=$(LLFALGS) \
!if "$(OS_TARGET)" == "WINCE"
    /EXPORT:CreateProcessA=CreateProcessA_CE \
!endif
    $(NULL)

#//------------------------------------------------------------------------
#//
#// Include the common makefile rules
#//
#//------------------------------------------------------------------------

include <$(DEPTH)/config/rules.mak>

export libs:: $(DLL)
    $(MAKE_INSTALL) .\$(DLL) $(DIST)\bin
    $(MAKE_INSTALL) .\$(EXP) $(DIST)\lib
