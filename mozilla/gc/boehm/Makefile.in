DEPTH = ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE=boehm
LIBRARY_NAME=boehm

DEFINES += -DATOMIC_UNCOLLECTABLE -DNO_SIGNALS -DNO_EXECUTE_PERMISSION -DALL_INTERIOR_POINTERS -DSILENT

DEFINES += -DREDIRECT_MALLOC=GC_malloc

# linux-specific stuff
DEFINES += -DLINUX_THREADS -D_REENTRANT

EXPORTS = gc.h

CSRCS= allchblk.c \
		alloc.c \
		blacklst.c \
		checksums.c \
		dbg_mlc.c \
		dyn_load.c \
		finalize.c \
		headers.c \
		irix_threads.c \
		linux_threads.c \
		mach_dep.c \
		malloc.c \
		mallocx.c \
		mark.c \
		mark_rts.c \
		misc.c \
		new_hblk.c \
		obj_map.c \
		os_dep.c \
		pcr_interface.c \
		ptr_chck.c \
		real_malloc.c \
		reclaim.c \
		solaris_pthreads.c \
		solaris_threads.c \
		stubborn.c \
		typd_mlc.c \
		$(NULL)

CPPSRCS = gc_cpp.cc

EXTRA_DSO_LDOPTS += \
	-lpthread	\
	$(NULL)


include $(topsrcdir)/config/rules.mk
