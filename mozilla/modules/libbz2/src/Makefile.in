DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= libbz2
LIBRARY_NAME	= bz2
LIBXUL_LIBRARY	= 1

PACKAGE_FILE = libbz2.pkg

# BIGFILES
DEFINES	+= -D_FILE_OFFSET_BITS=64

CSRCS		= \
		blocksort.c \
		bzlib.c \
		compress.c \
		crctable.c \
		decompress.c \
		huffman.c \
		randtable.c \
		$(NULL)

EXPORTS		= \
		bzlib.h \
		$(NULL)

FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk
