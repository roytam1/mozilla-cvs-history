DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= mar
PROGRAM		= mar$(BIN_SUFFIX)

# This makefile builds the mar command line utility

CSRCS		= \
		mar_read.c \
		mar_create.c \
		mar_extract.c \
		mar_test.c \
		mar.c \
		$(NULL)

GARBAGE		+= $(CSRCS) $(wildcard *.$(OBJ_SUFFIX))

ORIGINAL_CSRCS	:= $(addprefix $(topsrcdir)/modules/libmar/src/, $(CSRCS))

LOCAL_INCLUDES	= -I$(srcdir)/../src

include $(topsrcdir)/config/rules.mk

export:: $(ORIGINAL_CSRCS)
	$(INSTALL) $^ .
