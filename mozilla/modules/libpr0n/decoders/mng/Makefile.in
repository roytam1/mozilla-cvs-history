DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= imgmng
LIBRARY_NAME	= imgmng
EXPORT_LIBRARY  = 1
IS_COMPONENT	= 1
MODULE_NAME	= nsMNGDecoderModule
GRE_MODULE	= 1

EXTRA_DSO_LIBS	= gkgfx

REQUIRES	= xpcom \
		  gfx \
		  imglib2 \
		  $(MNG_REQUIRES) \
		  $(JPEG_REQUIRES) \
		  $(ZLIB_REQUIRES) \
		  $(NULL)

CPPSRCS		= nsMNGDecoder.cpp nsMNGFactory.cpp imgContainerMNG.cpp

EXTRA_DSO_LDOPTS = \
		$(LIBS_DIR) \
		$(MNG_LIBS) $(JPEG_LIBS) $(ZLIB_LIBS) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk


